<?xml version="1.0" encoding="utf-8"?>
<!--!DOCTYPE tcModuleConfig SYSTEM "../tcModuleConfig.dtd"-->

<!-- E-Mail-Versendung -->
<tcModuleConfig>
	<!-- Die in diesem Element enthaltenen param-Elemente erlauben, gewisse Aspekte von VerA.web zu steuern. -->
	<params>
		<param name="mailServer" type="map">
			
			<!-- die Wartezeit zwischen dem Versendenden verschiedener E-Mails in Sekunden. -->
			<param name="waitBetweenJobs" value="3"/>

			<!-- SMTP-Server Einstellungen -->
			<param name="host" value="localhost"/>
			<!-- <param name="username" value="username"/> -->
			<!-- <param name="password" value="password"/> -->

			<!--
				Der Absender, wenn zum versendenden Benutzer
				keine E-Mail-Adresse im Attribut "mail" im
				LDAP gefunden wird. Hier kann "$role" als
				Platzhalter f체r die Rolle des versendenden
				Benutzers genutzt werden.
			-->

			<param name="from" value="$role@yourcompany.com"/>
		</param>

		<!-- maximale L채nge, die eine "mailto:..."-URL annehmen darf (Internetstandard: 1024); "-1" steht f체r keine Beschr채nkung. -->
		<param name="mailToUrlMaxSize" value="1024"/>
	</params>
</tcModuleConfig>
