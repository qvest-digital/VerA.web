<?xml version="1.0" encoding="UTF-8"?>

<project>

    <extend>${basedir}/octopus-dependencies.xml</extend>
	<!-- 
		the version of maven's project object model. 
		Let this unchanged!
	-->
	<pomVersion>3</pomVersion>

	<!-- 
		a unique name for this project. Please use a package
		like name for this, e.g. "de.tarent.doctor".
	-->
	<groupId>de.tarent.octopus</groupId>

	<!-- 
		a unique name for the artifact generated by this project.
		This will be part of the artifact's name.
	-->
	<artifactId>octopus-core</artifactId>

	<!-- 
		The java base package used in this project.
	-->
	<package>de.tarent.octopus</package>

	<!-- 
		The version of the project under development, e.g.
		1.1, 1.2, 2.0-SNAPSHOT 
	-->
	<currentVersion>${octopus.version}</currentVersion>

	<!-- a short but descriptive name for the project -->
	<name>tarent-octopus kernel</name>

	<!-- a description of what the project does -->
	<description>
		Kernkomponente des tarent-octopus Application Containers.
	</description>

	<!-- a short description of what the project does -->
	<shortDescription>Core component of tarent-octopus.</shortDescription>

	<!-- details about the organization that 'owns' the project -->
	<organization>
		<name>tarent GmbH</name>
		<url>http://www.tarent.de/</url>
		<logo>http://www.tarent.de/templates/tarent_internet/images/tarent.gif</logo>
	</organization>

	<!-- the year the project started -->
	<inceptionYear>2002</inceptionYear>

	<!-- 
		the project home page. This is always
		http://kassandra.tarent.de/maven-projects/"project name"/
	-->
 	<url>http://kassandra.tarent.de/maven-projects/octopus-core/</url>

	<!-- The link to bugzilla. -->
	<issueTrackingUrl>http://bugzilla.tarent.de/</issueTrackingUrl>

	<!-- the host which has the web sites -->
	<siteAddress>kassandra.tarent.de</siteAddress>

	<!-- 
		directory for the web site on the host. This is always
		/home/maven/projects/"project name"
	-->
	<siteDirectory>/home/maven/projects/octopus-kernel</siteDirectory>

	<!-- any mailing lists for the project -->
	<mailingLists />

	<!-- who the developers are for the project -->
	<developers>
		<developer>
			<id>asteban</id>
			<name>Sebastian Mancke</name>
			<email>smancke@tarent.de</email>
			<organization>tarent GmbH</organization>
			<organizationUrl>http://www.tarent.de/</organizationUrl>
			<roles>
				<role>Core Developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
	</developers>

	<!-- default reports for tarent projects. -->
	<reports>
		<report>maven-pmd-plugin</report>
		<report>maven-jxr-plugin</report>
		<report>maven-changes-plugin</report>
		<report>maven-tasklist-plugin</report>
		<report>maven-javadoc-plugin</report>
		<report>maven-jdepend-plugin</report>
		<!--report>maven-jcoverage-plugin</report-->
		<report>maven-simian-plugin</report>
		<report>maven-faq-plugin</report>
		<report>maven-junit-report-plugin</report>
		<report>maven-license-plugin</report>
		<!--report>maven-files-plugin</report-->
	</reports>

	<!-- build information for the project -->
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<unitTestSourceDirectory>
			src/tests/java
		</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/*Test.java</include>
			</includes>
		</unitTest>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>*/**</include>
				</includes>
			</resource>
		</resources>
	</build>

	<!-- 
		Released versions. For each entry here, put a changes history in
		xdocs/changes.xml.
	-->
	<versions>
		<version>
			<id>1.0.0</id>
			<name>1.0.0</name>
			<tag>RELEASE_1_0_0</tag>
		</version>
	</versions>

	<!-- 
		artifact files the project is dependent on. Commons logging
		is an example here.
	-->
	<dependencies>
        <!-- Tarent internal -->

        <!-- external -->
        <!-- inherits octopus-dependencies -->
 	</dependencies>

</project>
