<?xml version='1.0' encoding='UTF-8'?>
<project>
  <actions/>
  <description>Export VerA.web Docker Image after a release&lt;br/&gt;&#xd;
Location: &lt;a href=&quot;http://veraweb-tools.lan.tarent.de/&quot;&gt;http://veraweb-tools.lan.tarent.de/&lt;/a&gt;</description>
  <logRotator class="hudson.tasks.LogRotator">
    <daysToKeep>-1</daysToKeep>
    <numToKeep>10</numToKeep>
    <artifactDaysToKeep>-1</artifactDaysToKeep>
    <artifactNumToKeep>-1</artifactNumToKeep>
  </logRotator>
  <keepDependencies>false</keepDependencies>
  <properties>
    <hudson.security.AuthorizationMatrixProperty>
      <permission>hudson.model.Item.Configure:veraweb</permission>
      <permission>hudson.model.Item.Build:veraweb</permission>
      <permission>hudson.model.Item.Workspace:veraweb</permission>
      <permission>hudson.model.Item.Read:veraweb</permission>
      <permission>hudson.model.Item.Delete:veraweb</permission>
    </hudson.security.AuthorizationMatrixProperty>
    <hudson.model.ParametersDefinitionProperty>
      <parameterDefinitions>
        <hudson.model.StringParameterDefinition>
          <name>RELEASE_VERSION</name>
          <description></description>
          <defaultValue></defaultValue>
        </hudson.model.StringParameterDefinition>
      </parameterDefinitions>
    </hudson.model.ParametersDefinitionProperty>
    <org.jenkins.plugins.lockableresources.RequiredResourcesProperty plugin="lockable-resources@1.7">
      <labelName>mr_veraweb</labelName>
    </org.jenkins.plugins.lockableresources.RequiredResourcesProperty>
  </properties>
  <scm class="hudson.plugins.git.GitSCM" plugin="git@2.2.12">
    <configVersion>2</configVersion>
    <userRemoteConfigs>
      <hudson.plugins.git.UserRemoteConfig>
        <url>git+ssh://git@gitlab.tarent.de/veraweb-int/environment.git</url>
      </hudson.plugins.git.UserRemoteConfig>
    </userRemoteConfigs>
    <branches>
      <hudson.plugins.git.BranchSpec>
        <name>master</name>
      </hudson.plugins.git.BranchSpec>
    </branches>
    <doGenerateSubmoduleConfigurations>false</doGenerateSubmoduleConfigurations>
    <submoduleCfg class="list"/>
    <extensions>
      <hudson.plugins.git.extensions.impl.LocalBranch>
        <localBranch>master</localBranch>
      </hudson.plugins.git.extensions.impl.LocalBranch>
    </extensions>
  </scm>
  <canRoam>true</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers/>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command>for IMAGE_NAME in httpd ldap core oa restapi osiam postgres; do
  NAME=$(./latestChangesEntry.py Components $IMAGE_NAME image)
  COMPONENT=$(echo $NAME | sed -e &apos;s#.*/##&apos;)
  VERSION=$(./latestChangesEntry.py Components $IMAGE_NAME version)

  ssh -l root veraweb-tools.lan.tarent.de &quot;test -d /var/www/$RELEASE_VERSION || mkdir /var/www/$RELEASE_VERSION&quot;
  IS_VERAWEB=$(echo $NAME | sed -e &apos;s#.*veraweb.*#OK#&apos;)
  if [ $IS_VERAWEB != &quot;OK&quot; ]; then
    ssh -l root veraweb-tools.lan.tarent.de &quot;docker pull $NAME:$VERSION&quot;
  fi
  ssh -l root veraweb-tools.lan.tarent.de &quot;docker save -o /var/www/$RELEASE_VERSION/$COMPONENT-$VERSION.img $NAME:$VERSION &amp;&amp; gzip -n9 /var/www/$RELEASE_VERSION/$COMPONENT-$VERSION.img&quot;
done
</command>
    </hudson.tasks.Shell>
  </builders>
  <publishers>
    <hudson.tasks.BuildTrigger>
      <childProjects>veraweb-new-dev-version</childProjects>
      <threshold>
        <name>SUCCESS</name>
        <ordinal>0</ordinal>
        <color>BLUE</color>
        <completeBuild>true</completeBuild>
      </threshold>
    </hudson.tasks.BuildTrigger>
  </publishers>
  <buildWrappers/>
</project>
