<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.evolvis.veraweb</groupId>
	<artifactId>veraweb-ear</artifactId>
	<packaging>ear</packaging>
	<version>1.4.3.1</version>

	<name>veraweb-evolvis-ear</name>
	<description>Veranstaltungsmanagment VerA.web</description>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<inceptionYear>2005</inceptionYear>

	<licenses>
		<license>
			<name>GNU General Public License</name>
			<url>http://www.gnu.org/licenses/gpl-2.0.txt</url>
		</license>
	</licenses>

	<url>http://veraweb.evolvis.org/</url>

	<mailingLists>
		<mailingList>
			<name>veraweb-commits@lists.evolvis.org</name>
		</mailingList>
		<mailingList>
			<name>veraweb-discussion@lists.evolvis.org</name>
		</mailingList>
	</mailingLists>

	<organization>
		<name>tarent solutions GmbH, Germany</name>
		<url>http://www.tarent.de/</url>
	</organization>

	<scm>
                <developerConnection>scm:git:ssh://maven@evolvis.org/scmrepos/git/veraweb/veraweb.git</developerConnection>
		<url>https://evolvis.org/plugins/scmgit/cgi-bin/gitweb.cgi?p=veraweb/veraweb.git</url>
	</scm>

	<repositories>
		<repository>
			<id>evolvis-release-repository</id>
			<name>evolvis.org release repository</name>
			<url>http://maven-repo.evolvis.org/releases</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>evolvis-snapshot-repository</id>
			<name>evolvis.org snapshot repository</name>
			<url>http://maven-repo.evolvis.org/snapshots</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<distributionManagement>
		<repository>
			<id>evolvis-release-repository</id>
			<name>evolvis.org release repository</name>
			<url>sftp://maven-repo.evolvis.org/var/www/maven_repo/releases</url>
		</repository>

		<snapshotRepository>
			<id>evolvis-snapshot-repository</id>
			<name>evolvis.org snapshot repository</name>
			<url>sftp://maven-repo.evolvis.org/var/www/maven_repo/snapshots</url>
		</snapshotRepository>
	</distributionManagement>

	<build>
		<outputDirectory>target/${project.name}</outputDirectory>

		<plugins>
			<plugin>
				<artifactId>maven-ear-plugin</artifactId>

				<configuration>
					<finalName>veraweb</finalName>

					<archive>
						<manifestEntries>
							<version_name>${project.name}</version_name>
							<version_description>
								${project.description}
							</version_description>
							<version_copyright>
								Copyright (c) 2005-2008 tarent GmbH
								Copyright © 2013–2015 tarent solutions GmbH
							</version_copyright>
							<version_vendor>
								${project.organization.name}
							</version_vendor>
							<version_version>
								${project.version}
							</version_version>
						</manifestEntries>
					</archive>

					<jboss>
						<version>4</version>
						<loader-repository>
							{$project.groupId}:loader=${project.name}.ear
						</loader-repository>
					</jboss>

					<modules>
						<webModule>
							<bundleFileName>veraweb.war</bundleFileName>
							<unpack>true</unpack>
							<groupId>org.evolvis.veraweb</groupId>
							<artifactId>veraweb-war</artifactId>
							<context-root>veraweb</context-root>
						</webModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.evolvis.veraweb</groupId>
			<artifactId>veraweb-war</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
	</dependencies>
</project>
