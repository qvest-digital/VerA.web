#set($activeMenu = "Verwaltung")
#set($title = "${placeholderWithTranslation.BROWSER_TITLE_USER_CONFIGS}")
#parse("inc/header.vm")

<div id="content_container">
	<form action="UserConfig" method="POST">

		<div id="breadcrumb" class="textRight marginBottom10">
			<strong>${placeholderWithTranslation.siesindhier}:</strong> <span><a href="${paths.staticWeb}do/" title="${placeholderWithTranslation.zurstartseite}">${placeholderWithTranslation.home}</a> > ${placeholderWithTranslation.verwaltung} > ${placeholderWithTranslation.einstellungen}</span>
		</div>

		<h1>${placeholderWithTranslation.einstellungen}</h1>

		#if($saveSuccess)
			<vera-success>${placeholderWithTranslation.einstellungenwurdenerfolgreichgespeichert}</vera-success>
		#end

		#if(!$userConfig.personTab || $userConfig.personTab == "1")
			#set($personTab1 = true)
		#else
			#set($personTab2 = true)
		#end

		#if(!$userConfig.personMemberTab || $userConfig.personMemberTab == "1")
			#set($personMemberTab1 = true)
		#else
			#set($personMemberTab2 = true)
		#end

		#if(!$userConfig.personAddresstypeTab || $userConfig.personAddresstypeTab == "1")
			#set($personAddresstypeTab1 = true)
		#elseif($userConfig.personAddresstypeTab == "2")
			#set($personAddresstypeTab2 = true)
		#else
			#set($personAddresstypeTab3 = true)
		#end

		#if(!$userConfig.personLocaleTab || $userConfig.personLocaleTab == "1")
			#set($personLocaleTab1 = true)
		#elseif($userConfig.personLocaleTab == "2")
			#set($personLocaleTab2 = true)
		#else
			#set($personLocaleTab3 = true)
		#end
		<div id="main_content" class="contentBoxColored grayBorder">

				<div style="width: 57%; float: left; max-width: 550px;">
					<h3>${placeholderWithTranslation.personendetailansicht}</h3>
							<fieldset class="marginTop20">
								<legend>${placeholderWithTranslation.standardauswahlvontabulatoren}</legend>
								<div class="table width100 inlineLabel">
									<div class="tableRow">
										<div class="tableCell bold paddingBottom10 width30">${placeholderWithTranslation.haupttabs}</div>
										<div class="tableCell"><input type="radio" name="personTab" id="personTab1" value="1" #if($personTab1) checked #end> <label for="personTab1">&nbsp;${placeholderWithTranslation.personendaten}</label></div>
										<div class="tableCell"><input type="radio" name="personTab" id="personTab2" value="2" #if($personTab2) checked #end> <label for="personTab2">&nbsp;${placeholderWithTranslation.anschriften}</label></div>
										<div class="tableCell"></div>
									</div>
									<div class="tableRow">
										<div class="tableCell bold paddingBottom10">${placeholderWithTranslation.subtabsvon}&bdquo;${placeholderWithTranslation.personendaten}&rdquo;</div>
										<div class="tableCell verticalBottom"><input type="radio" name="personMemberTab" id="personMemberTab1" value="1" #if($personMemberTab1) checked #end> <label for="personMemberTab1">&nbsp;${placeholderWithTranslation.hauptperson}</label></div>
										<div class="tableCell verticalBottom"><input type="radio" name="personMemberTab" id="personMemberTab2" value="2" #if($personMemberTab2) checked #end> <label for="personMemberTab2">&nbsp;${placeholderWithTranslation.partner}</label></div>
										<div class="tableCell"></div>
									</div>
									<div class="tableRow">
										<div class="tableCell bold paddingBottom10">${placeholderWithTranslation.subtabsvon}&bdquo;${placeholderWithTranslation.anschriften}&rdquo;</div>
										<div class="tableCell verticalBottom"><input type="radio" name="personAddresstypeTab" id="personAddresstypeTab1" value="1" #if($personAddresstypeTab1) checked #end> <label for="personAddresstypeTab1">&nbsp;${placeholderWithTranslation.geschaftlich}</label></div>
										<div class="tableCell verticalBottom"><input type="radio" name="personAddresstypeTab" id="personAddresstypeTab2" value="2" #if($personAddresstypeTab2) checked #end> <label for="personAddresstypeTab2">&nbsp;${placeholderWithTranslation.privat}</label></div>
										<div class="tableCell verticalBottom"><input type="radio" name="personAddresstypeTab" id="personAddresstypeTab3" value="3" #if($personAddresstypeTab3) checked #end> <label for="personAddresstypeTab3">&nbsp;${placeholderWithTranslation.GENERIC_MORE}</label></div>
									</div>
								</div>
							</fieldset>
							<fieldset>
							<legend>${placeholderWithTranslation.standardauswahlderselectboxbdquozeichensatzrdquo}</legend>
								<div class="table width100 inlineLabel">
									<div class="tableRow">
										<div class="tableCell"><input type="radio" name="personLocaleTab" id="personLocaleTab1" value="1" #if($personLocaleTab1) checked #end> <label for="personLocaleTab1">&nbsp;${placeholderWithTranslation.GENERIC_LATIN}</label></div>
										<div class="tableCell"><input type="radio" name="personLocaleTab" id="personLocaleTab2" value="2" #if($personLocaleTab2) checked #end> <label for="personLocaleTab2">&nbsp;${placeholderWithTranslation.zeichensatz} 1</label></div>
										<div class="tableCell"><input type="radio" name="personLocaleTab" id="personLocaleTab3" value="3" #if($personLocaleTab3) checked #end> <label for="personLocaleTab3">&nbsp;${placeholderWithTranslation.zeichensatz} 2</label></div>
									</div>
								</div>

							</fieldset>
				</div>

				<div style="width:44%" class="floatRight">
					<h3>${placeholderWithTranslation.gasteliste}</h3>
							<fieldset class="marginTop20">
								<legend>${placeholderWithTranslation.zusaetzlichefelder}</legend>
								<div class="table inlineLabel">
									<div class="tableRow">
										<div class="tableCell"><input type="checkbox" name="guestListFunction" id="guestListFunction" value="true" #if($userConfig.guestListFunction) checked #end> <label for="guestListFunction">&nbsp;${placeholderWithTranslation.funktion}</label></div>
										<div class="tableCell"><input type="checkbox" name="guestListCity" id="guestListCity" value="true" #if($userConfig.guestListCity) checked #end> <label for="guestListCity">&nbsp;${placeholderWithTranslation.plzort}</label></div>
										<div class="tableCell"><input type="checkbox" name="guestListPhone" id="guestListPhone" value="true" #if($userConfig.guestListPhone) checked #end> <label for="guestListPhone">&nbsp;${placeholderWithTranslation.telefon}</label></div>
									</div>
								</div>

							</fieldset>
							<h3>${placeholderWithTranslation.personenliste}</h3>
							<fieldset class="marginTop20">
								<legend>${placeholderWithTranslation.zusaetzlichefelder}</legend>
								<div class="table inlineLabel">
									<div class="tableRow">
										<div class="tableCell"><input type="checkbox" name="personListState" id="personListState" value="true" #if($userConfig.personListState) checked #end> <label for="personListState">&nbsp;${placeholderWithTranslation.GENERIC_FEDERAL_STATE}</label></div>
									</div>
								</div>
							</fieldset>
				</div>

				<div class="clear"></div>

		</div>
		<div class="textRight marginTop10" id="buttonPanel-bottom">
				<input type="submit" class="mainButton" value="${placeholderWithTranslation.speichern}" title="Speichern" name="save" />
		</div>
</form>
</div>

#parse("inc/footer.vm")
