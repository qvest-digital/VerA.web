#set($activeMenu = "Verwaltung")
#set($title = "${placeholderWithTranslation.BROWSER_TITLE_HELP} - ${placeholderWithTranslation.BROWSER_TITLE_INFO_VERAWEB}")

##Values in per cent for table columns width
#set($column0 = 15)
#set($column1 = 85)

#parse("inc/header.vm")

<div id="content_container">
    <form action="Main" method="POST">

    <div id="breadcrumb" class="textRight marginBottom10">
        <strong>${placeholderWithTranslation.siesindhier}:</strong> <span><a href="${paths.staticWeb}do/" title="${placeholderWithTranslation.zurstartseite}">${placeholderWithTranslation.home}</a> > ${placeholderWithTranslation.verwaltung} > ${placeholderWithTranslation.info}</span>
    </div>

    <h1>${placeholderWithTranslation.informationenzuveraweb}</h1>


    #if($errors && $errors.size() > 0)
    <vera-warn>
    	#foreach($error in $errors)
    		$error<br>
    	#end
    	<br>
    	${placeholderWithTranslation.eskannzuunerwartetenfehlernkommenbittewendensiesichanihrenadministrator}
    </vera-warn>
    #end


    <h3>VerA.web</h3>
    #if($properties)
    <table class="form fixed">
        ##Set column size
        <col width="$column0%" />
        <col width="$column1%" />

        <tr>
            <td class="width15 bold">${placeholderWithTranslation.version}:</td>
            <td>$properties.getString("poversion")</td>
        </tr><tr>
            <td class="width15 bold">${placeholderWithTranslation.buildnummer}:</td>
            <td>$properties.getString("pobuildnr")</td>
        </tr><tr>
            <td class="width15 bold">${placeholderWithTranslation.buildzeit}:</td>
            <td>$properties.getString("pobuildts")</td>
        </tr>
    </table>
    <br>
    #else
    <p><i>${placeholderWithTranslation.informationennichtverfugbar}</i></p>
    #end

    <h3>${placeholderWithTranslation.datenbank}</h3>
    <table class="form fixed">
    	##Set column size
		<col width="$column0%" />
		<col width="$column1%" />

    	<tr>
    		<td class="width15 bold">${placeholderWithTranslation.version}:</td>
    		<td>
    #if($config && $config.get("SCHEMA_VERSION"))
    			$config.get("SCHEMA_VERSION")
    #else
    			<i style="color: red;">${placeholderWithTranslation.nichtverfugbar}</i>
    #end
    		</td>
    	</tr><tr>
    		<td class="width15 bold">${placeholderWithTranslation.zeichensatz}</td>
    		<td>
    #if($LC_CTYPE)
    			LC_CTYPE = $LC_CTYPE
    #else
    			<i style="color: red;">${placeholderWithTranslation.nichtverfugbar}</i>
    #end
    		</td>
    	</tr><tr>
    		<td class="width15 bold">&nbsp;</td>
    		<td>
    #if($LC_COLLATE)
    			LC_COLLATE = $LC_COLLATE
    #else
    			<i style="color: red;">${placeholderWithTranslation.nichtverfugbar}</i>
    #end
    		</td>
    	</tr>
    </table>
    <br>


    <h3>${placeholderWithTranslation.GENERIC_USER}</h3>

    <table class="form fixed">
    	##Set column size
		<col width="$column0%" />
		<col width="$column1%" />

    	<tr>
    		<td class="width15 bold"">${placeholderWithTranslation.login}:</td>
    		<td>$!octopusConfig.personalConfig.userLogin</td>
    	</tr><tr>
    		<td class="width15 bold">${placeholderWithTranslation.rolle}:</td>
    		<td>
    #if($octopusConfig.personalConfig.role)
    			$octopusConfig.personalConfig.role
    #else
    			<i>${placeholderWithTranslation.nichtgewahlt}</i>
    #end
    		</td>
    	</tr>
    	<tr>
    		<td class="width15 bold">${placeholderWithTranslation.GENERIC_CLIENT_SINGULAR}:</td>
    		<td>
    #if($orgUnit.id != 0)
    			$orgUnit.name
    #else
    			<i>${placeholderWithTranslation.nichtgewahlt}</i>
    #end
    		</td>
    	</tr>
    #if($octopusConfig.personalConfig.proxy)
    	<tr>
    		<td>vertreten durch:</td>
    		<td>$octopusConfig.personalConfig.proxy</td> 
	</tr> 
    #end 
    #if($octopusConfig.personalConfig.roles) 
	<tr> 
		<td>${placeholderWithTranslation.verfugbarerollen}:
		</td> 
	<td>
     #foreach($gg in $octopusConfig.personalConfig.roles)
     $gg
     #end
    		</td>
    	</tr>
    #end
    	<tr>
    		<td class="width15 bold">${placeholderWithTranslation.gruppen}:</td>
    		<td>
    #foreach($gg in $octopusConfig.personalConfig.userGroups)
     $gg
    #end
    		</td>
    	</tr>
    	<tr>
    		<td class="width15 bold"">${placeholderWithTranslation.GENERIC_EMAIL_SINGULAR}:</td>
    		<td>
    #if($octopusConfig.personalConfig.userEmail)
    			$!octopusConfig.personalConfig.userEmail
    #else
    			<i>${placeholderWithTranslation.nichtverfugbar}</i>
    #end
    		</td>
    	</tr>
    </table>




    </form>
</div>
<!--
$responseParams
-->
#parse("inc/footer.vm")
