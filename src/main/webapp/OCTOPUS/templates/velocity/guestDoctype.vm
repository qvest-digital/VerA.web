#set($activeMenu = "Veranstaltungen")
#set($title = "${placeholderWithTranslation.BROWSER_TITLE_EVENT_GUESTLIST}: $!message.plain($event.shortname)")
#set($elementNameSex = "${placeholderWithTranslation.GENDER_TYPE_GUEST}")
#set($elementNameSingular = "${placeholderWithTranslation.GENERIC_GUEST_SINGULAR}")
#set($elementNamePlural = "${placeholderWithTranslation.GENERIC_GUEST_PLURAL}")
#parse("inc/header.vm")


<div id="content_container">
	<div id="breadcrumb" class="textRight marginBottom10">
    		<strong>${placeholderWithTranslation.GENERIC_YOU_ARE_HERE}:</strong> <span><a href="${paths.staticWeb}do/" title="${placeholderWithTranslation.zurstartseite}">${placeholderWithTranslation.GENERIC_HOME}</a> > ${placeholderWithTranslation.GENERIC_EVENT_PLURAL} > ${placeholderWithTranslation.GENERIC_EDIT_EVENT}</span>
    </div>
    <h1>${placeholderWithTranslation.gasteverwaltungderveranstaltung}: $!message.plain($event.shortname)</h1>

	#if(!$isNewEvent)
		#set($completeEventHeader = true)
      	#parse("inc/event-header.vm")
    #end

	<div class="tabs contentBox grayBorder marginBottom40 marginTop20 posRel" id="main_content">
    	<div id="tabsMain">
    		<ul vera-tab-group="" class="gray-gradient"> <!-- Bitte das End-tag der <li>s immer mit in die nÃ¤chste Zeile nehmen (verhindert Mozilla styling bug) -->
    			<li id="gaesteliste" class="inactive"><div>${placeholderWithTranslation.GENERIC_LIST_OF_GUESTS}</div>
    			</li><li id="gastdetails" class="inactive"><div>${placeholderWithTranslation.gastdetails}</div>
    			</li><li id="dokumenttypen" class="active"><div>${placeholderWithTranslation.BROWSER_TITLE_DOCUMENT_TYPES}</div>
    			</li>
    		</ul>
    	</div>

		<div class="contentBoxColored tabsContent">

			#parse("inc/guest-detail-header.vm")

			#parse("inc/guestMasterDataNote.vm")

            #if (!$allDoctype || $allDoctype.size() != 0)
			<h3 class="marginBottom10">${placeholderWithTranslation.dokumenttypwahlen}</h3>
            <form action="ShowGuestDoctype" method="get" class="marginBottom40">

			<div class="inlineLabel">
				<label for="">${placeholderWithTranslation.GENERIC_DOCUMENT_TYPE_SINGULAR}</label>
				<select id="doctype-id" name="doctype-id" onChange="submit();">
            			#foreach($doc in $allDoctype)
            			<option value="$!doc.doctype" #if($doc.doctype == $guestdoctype.doctype) selected#end>$!message.text($doc.name)</option>
            			#end
            	</select>
			</div>
            </form>
            #end

            #if ($guestdoctype && $guestdoctype.id)
            <form id="ReloadGuestDoctypeForm" action="SaveGuestDoctype" method="post">
                <input type="hidden" name="create" value="true">
                <input type="hidden" name="guestdoctype-id" value="$!guestdoctype.id">
                <input type="hidden" name="guestdoctype-guest" value="$!guestdoctype.guest">
                <input type="hidden" name="guestdoctype-doctype" value="$!guestdoctype.doctype">
                <input type="hidden" name="guestdoctype-person" value="$!guestdoctype.person">

                <input type="hidden" id="reloadguestdoctype-addresstype" name="guestdoctype-addresstype" value="$!guestdoctype.addresstype">
                <input type="hidden" id="reloadguestdoctype-locale" name="guestdoctype-locale" value="$!guestdoctype.locale">
            </form>

            <form id="GuestForm" name="GuestForm" action="SaveGuestDoctype" method="post">

                <input type="hidden" name="guestdoctype-id" value="$!guestdoctype.id">
                <input type="hidden" name="guestdoctype-guest" value="$!guestdoctype.guest">
                <input type="hidden" name="guestdoctype-doctype" value="$!guestdoctype.doctype">
                <input type="hidden" name="guestdoctype-person" value="$!guestdoctype.person">

                <input type="hidden" name="guestdoctype-addresstype" value="$!guestdoctype.addresstype">
                <input type="hidden" name="guestdoctype-locale" value="$!guestdoctype.locale">

				<h3 class="marginBottom10">${placeholderWithTranslation.adresstypundzeichensatzwahlen}</h3>

				<div class="table marginBottom40">
					<div class="tableRow">
						<div class="tableCell">
							<label for="select-addresstype">${placeholderWithTranslation.adresstyp}</label>
							<select id="select-addresstype" name="select-addresstype">
                    			<option value="1" #if($guestdoctype.addresstype == 1) selected#end>${placeholderWithTranslation.GENERIC_BUSINESS}</option>
                    			<option value="2" #if($guestdoctype.addresstype == 2) selected#end>${placeholderWithTranslation.privat}</option>
                    			<option value="3" #if($guestdoctype.addresstype == 3) selected#end>${placeholderWithTranslation.GENERIC_MORE}</option>
							</select>
						</div>
						<div class="tableCell">
							<label for="select-locale">${placeholderWithTranslation.GENERIC_CHARSET}</label>
							<select id="select-locale" name="select-locale">
                    			<option value="1" #if($guestdoctype.locale == 1) selected#end>${placeholderWithTranslation.GENERIC_LATIN}</option>
                    			<option value="2" #if($guestdoctype.locale == 2) selected#end>${placeholderWithTranslation.GENERIC_CHARSET} 1</option>
                    			<option value="3" #if($guestdoctype.locale == 3) selected#end>${placeholderWithTranslation.GENERIC_CHARSET} 2</option>
                    		</select>

						</div>
						<div class="tableCell" style="vertical-align:bottom;">
							<input type="button" name="create" value="Neu laden" onclick="reloadGuestDoctype();">
						</div>
					</div>
				</div>

				<h3 class="marginBottom10">${placeholderWithTranslation.datenbearbeiten}</h3>

				<div class="table width100 marginBottom40">
					<div class="tableRow">
						<div class="tableCell width50">
							<label for="guestdoctype-textfield">${placeholderWithTranslation.GENERIC_FREE_TEXT_FIELD}</label>
							<textarea id="guestdoctype-textfield" name="guestdoctype-textfield" >$!message.textarea($guestdoctype.textfield)</textarea>
						</div>
						<div class="tableCell width50">
							<label for="guestdoctype-textfield_p">${placeholderWithTranslation.freitextfeldpartner}</label>
							<textarea id="guestdoctype-textfield_p" name="guestdoctype-textfield_p" >$!message.textarea($guestdoctype.textfield_p)</textarea>
						</div>
					</div>
					<div class="tableRow">
						<div class="tableCell">
							<label for="guestdoctype-textjoin">${placeholderWithTranslation.verbinder}</label>
							<input type="text" id="guestdoctype-textjoin" name="guestdoctype-textjoin" maxlength="50" value="$!message.text($guestdoctype.textjoin)" >
						</div>
						<div class="tableCell"></div>
					</div>
				</div>


				<fieldset class="width49 inline">
					<legend>${placeholderWithTranslation.GENERIC_PERSONAL_DATA} (${placeholderWithTranslation.GENERIC_MAIN_PERSON})</legend>
					<div class="table width100">
						<div class="tableRow">
							<div class="tableCell">
								<label for="guestdoctype-salutation">${placeholderWithTranslation.GENERIC_SALUTATION_SINGULAR}</label>
								<input type="text" id="guestdoctype-salutation" maxlength="50" name="guestdoctype-salutation" value="$!message.text($guestdoctype.salutation)" />
							</div>
						</div>
						<div class="tableRow">
							<div class="tableCell">
								<label for="guestdoctype-titel">${placeholderWithTranslation.GENERIC_ACAD_TITLE}</label>
								<input type="text" id="guestdoctype-titel" maxlength="250" name="guestdoctype-titel" value="$!message.text($guestdoctype.titel)" />
							</div>
						</div>
						<div class="tableRow">
							<div class="tableCell">
								<label for="guestdoctype-firstname">${placeholderWithTranslation.GENERIC_FIRSTNAME}</label>
								<input type="text" id="guestdoctype-firstname" maxlength="100" name="guestdoctype-firstname" value="$!message.text($guestdoctype.firstname)" />
							</div>
						</div>
						<div class="tableRow">
							<div class="tableCell">
								<label for="guestdoctype-lastname">${placeholderWithTranslation.GENERIC_LASTNAME}</label>
								<input type="text" id="guestdoctype-lastname" maxlength="100" name="guestdoctype-lastname" value="$!message.text($guestdoctype.lastname)" />
							</div>
						</div>
						<div class="tableRow">
							<div class="tableCell">
								<label for="">${placeholderWithTranslation.GENERIC_FUNCTION_SINGULAR} / ${placeholderWithTranslation.GENERIC_OFFICIAL_TITLE_SHORT}.</label>
								<input type="text" id="guestdoctype-function" maxlength="250" name="guestdoctype-function" value="$!message.text($guestdoctype.function)" />
							</div>
						</div>
						<div class="tableRow">
							<div class="tableCell">
								<label for="guestdoctype-company">${placeholderWithTranslation.GENERIC_COMPANY_INSTITUTION}</label>
								<input type="text" id="guestdoctype-company" maxlength="250" name="guestdoctype-company" value="$!message.text($guestdoctype.company)" >
							</div>
						</div>
					</div>
				</fieldset>

                <fieldset class="width49 floatRight">
					<legend>${placeholderWithTranslation.GENERIC_PERSONAL_DATA} (${placeholderWithTranslation.GENERIC_PARTNER})</legend>
					<div class="table width100">
						<div class="tableRow">
							<div class="tableCell">
								<label for="guestdoctype-salutation_p">${placeholderWithTranslation.GENERIC_SALUTATION_SINGULAR} (${placeholderWithTranslation.GENERIC_PARTNER})</label>
								<input type="text" id="guestdoctype-salutation_p" maxlength="50" name="guestdoctype-salutation_p" value="$!message.text($guestdoctype.salutation_p)" />
							</div>
						</div>
						<div class="tableRow">
							<div class="tableCell">
								<label for="guestdoctype-titel_p">${placeholderWithTranslation.GENERIC_ACAD_TITLE} (${placeholderWithTranslation.GENERIC_PARTNER})</label>
								<input type="text" id="guestdoctype-titel_p" maxlength="250" name="guestdoctype-titel_p" value="$!message.text($guestdoctype.titel_p)" />
							</div>
						</div>
						<div class="tableRow">
							<div class="tableCell">
								<label for="guestdoctype-firstname_p">${placeholderWithTranslation.GENERIC_FIRSTNAME} (${placeholderWithTranslation.GENERIC_PARTNER})</label>
								<input type="text" id="guestdoctype-firstname_p"maxlength="100" name="guestdoctype-firstname_p" value="$!message.text($guestdoctype.firstname_p)" />
							</div>
						</div>
						<div class="tableRow">
							<div class="tableCell">
								<label for="guestdoctype-lastname_p">${placeholderWithTranslation.GENERIC_LASTNAME} (${placeholderWithTranslation.GENERIC_PARTNER})</label>
								<input type="text" id="guestdoctype-lastname_p" maxlength="100" name="guestdoctype-lastname_p" value="$!message.text($guestdoctype.lastname_p)" />
							</div>
						</div>
					</div>
                </fieldset>

				<fieldset>
					<legend>${placeholderWithTranslation.kontaktdaten}</legend>
					<div class="table width100">
						<div class="tableRow">
							<div class="tableCell width50">
								<label for="guestdoctype-street">${placeholderWithTranslation.GENERIC_STREET}</label>
								<input type="text" maxlength="100" id="guestdoctype-street" name="guestdoctype-street" value="$!message.text($guestdoctype.street)" />
							</div>
							<div class="tableCell width50">
								<label for="guestdoctype-fon">${placeholderWithTranslation.GENERIC_TELEFON}</label>
								<input type="text" id="guestdoctype-fon" maxlength="100" name="guestdoctype-fon" value="$!message.text($guestdoctype.fon)" />
							</div>
						</div>
						<div class="tableRow">
							<div class="tableCell width50">
								<div class="width25 inlineBlock">
									<label for="guestdoctype-zipcode">${placeholderWithTranslation.GENERIC_POST_NUMBER}</label>
									<input type="text" id="guestdoctype-zipcode" maxlength="50" name="guestdoctype-zipcode" value="$!message.text($guestdoctype.zipcode)" />
								</div>
								<div class="width75 inlineBlock floatRight">
									<label for="guestdoctype-city">${placeholderWithTranslation.GENERIC_CITY}</label>
									<input type="text" id="guestdoctype-city" name="guestdoctype-city" maxlength="100" value="$!message.text($guestdoctype.city)" />
								</div>
							</div>
							<div class="tableCell width50">
								<label for="guestdoctype-fax">${placeholderWithTranslation.GENERIC_FAX}</label>
								<input type="text" id="guestdoctype-fax" maxlength="100" name="guestdoctype-fax" value="$!message.text($guestdoctype.fax)" />
							</div>
						</div>
						<div class="tableRow">
							<div class="tableCell width50">
								<div class="width25 inlineBlock">
									<label for="guestdoctype-poboxzipcode">${placeholderWithTranslation.postfachplz}</label>
									<input type="text" id="guestdoctype-poboxzipcode" maxlength="50" name="guestdoctype-poboxzipcode" value="$!message.text($guestdoctype.poboxzipcode)" />
								</div>
								<div class="width75 inlineBlock floatRight">
									<label for="guestdoctype-pobox">${placeholderWithTranslation.nummer}</label>
									<input type="text" id="guestdoctype-pobox" name="guestdoctype-pobox" maxlength="50" value="$!message.text($guestdoctype.pobox)" />
								</div>
							</div>
							<div class="tableCell width50">
								<label for="guestdoctype-mail">${placeholderWithTranslation.GENERIC_EMAIL_SINGULAR} #if($email && $email.length()>0)<a href="mailto:$!message.text($email)"><img src="${paths.staticWeb}images/email.gif"></a>#end</label>
								<input type="text" maxlength="250" id="guestdoctype-mail" name="guestdoctype-mail" value="$!message.text($guestdoctype.mail)" >
							</div>						</div>
						<div class="tableRow">
							<div class="tableCell width50">
								<label for="guestdoctype-suffix1">${placeholderWithTranslation.GENERIC_ADDRESS_ADDITIONAL} 1</label>
								<input type="text" id="guestdoctype-suffix1" maxlength="100" name="guestdoctype-suffix1" value="$!message.text($guestdoctype.suffix1)" />
							</div>
							<div class="tableCell width50">
								<label for="guestdoctype-www">${placeholderWithTranslation.LETTERS_WWW}</label>
								<input type="text" maxlength="250" id="guestdoctype-www" name="guestdoctype-www" value="$!message.text($guestdoctype.www)" >
							</div>
						</div>
						<div class="tableRow">
							<div class="tableCell width50">
								<label for="guestdoctype-suffix2">${placeholderWithTranslation.GENERIC_ADDRESS_ADDITIONAL} 2</label>
								<input type="text" id="guestdoctype-suffix2" maxlength="100" name="guestdoctype-suffix2" value="$!message.text($guestdoctype.suffix2)" />
							</div>
							<div class="tableCell width50">
								<label for="guestdoctype-mobil">${placeholderWithTranslation.GENERIC_MOBILE}</label>
								<input type="text" maxlength="100" id="guestdoctype-mobil" name="guestdoctype-mobil" value="$!message.text($guestdoctype.mobil)" />
							</div>
						</div>
						<div class="tableRow">
							<div class="tableCell width50">
								<label for="guestdoctype-country">${placeholderWithTranslation.land}</label>
								<input type="text" id="guestdoctype-country" maxlength="100" name="guestdoctype-country" value="$!message.text($guestdoctype.country)" />
							</div>
							<div class="tabelCell"></div>
						</div>
					</div>
				</fieldset>

                #else

                <vera-info>
                	${placeholderWithTranslation.EVENT_DOCTYPE_RESET_INFO}
                </vera-info>

                #end


                #parse("inc/guest-doctype-navi.vm")

                <span class="posAb" id="buttonPanel-bottom" style="right:-1px; bottom:-40px">
					#if($grants.mayWrite())
						<input type="submit" name="save" value="${placeholderWithTranslation.speichern}" title="Speichern" class="mainButton" />
					#end
                    <input type="button" name="cancel" value="${placeholderWithTranslation.zuruckzudenveranstaltungsdetails}" title="${placeholderWithTranslation.zuruckzudenveranstaltungsdetails}" class="mainButton" onclick="window.location.href='ShowEvent?id=$!event.id&action=event';" />
                </span>

            </form><!-- End id="GuestForm" -->
		</div>

<script type="text/javascript">
	function reloadGuestDoctype() {
		var sa = document.getElementById('select-addresstype');
		var sl = document.getElementById('select-locale');
		var ra = document.getElementById('reloadguestdoctype-addresstype');
		var rl = document.getElementById('reloadguestdoctype-locale');

		ra.value = sa[sa.selectedIndex].value;
		rl.value = sl[sl.selectedIndex].value;
		document.getElementById('ReloadGuestDoctypeForm').submit();
	}

    #if(!$grants.mayWrite())
    	disableForm(document.getElementById('GuestForm'));
    #end

	$(function () {
        $('li#gaesteliste').click(function () {
            window.location.href = '${paths.staticWeb}do/ShowGuestList?selectNone=true';
        });

        $('li#gastdetails').click(function () {
            window.location.href = '${paths.staticWeb}do/ShowGuestDetail';
        });
    });
</script>
</div>
</div>

#parse("inc/footer.vm")
