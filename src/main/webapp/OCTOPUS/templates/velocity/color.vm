	</div>

	<h1>${placeholderWithTranslation.GENERIC_COLOR_PLURAL}</h1>

	<form id="formlist" name="formlist" action="Color" method="POST">

		#if($errors.size() > 0)
		<vera-warn>
			#foreach($error in $errors)
				$error<br>
			#end
