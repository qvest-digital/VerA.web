	<div id="breadcrumb" class="textRight marginBottom10">
		<strong>${placeholderWithTranslation.siesindhier}:</strong> <span><a href="${paths.staticWeb}do/" title="${placeholderWithTranslation.zurstartseite}">Home</a> > ${placeholderWithTranslation.zurstartseite} > <a href="${paths.staticWeb}do/ShowPersonSearch?action=person" title="${placeholderWithTranslation.zurpersonensuche}">${placeholderWithTranslation.personensuche}</a> > Suchergebnis</span>
