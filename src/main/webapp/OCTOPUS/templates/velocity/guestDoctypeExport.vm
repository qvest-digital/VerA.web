                            ## 2008-02-26
                            			<option value="workareaname">${placeholderWithTranslation.GENERIC_WORKAREA_SINGULAR}</option>
                            #end
                		</select>
        			</div>
        		</div>
        		<div class="tableRow">
        			<div class="tableCell"><label for="sort3">${placeholderWithTranslation.anschliesendnach}</label></div>
        			<div class="tableCell">
        				<select name="sort3" id="sort3" >
                            #if($search.listorder == "lastname_a_e1" || $search.listorder == "firstname_a_e1" || $search.listorder == "mail_a_e1")
