                            			<option value="zipcode">${placeholderWithTranslation.plz}</option>
                            			<option value="category">${placeholderWithTranslation.GENERIC_CATEGORY_SINGULAR}</option>
                            			<option value="rank">${placeholderWithTranslation.rang}</option>
                            			<option value="table">${placeholderWithTranslation.tisch}</option>
                            ## modified to support workareas as per change request for version 1.2.0
                            ## cklein
                            ## 2008-02-26
                            			<option value="workareaname">${placeholderWithTranslation.GENERIC_WORKAREA_SINGULAR}</option>
                            #else
                            			<option value="orderno">${placeholderWithTranslation.CONTINUAL_NUMBER}</option>
                            			<option value="name">${placeholderWithTranslation.GENERIC_NAME}</option>
                            			<option value="country">${placeholderWithTranslation.land}</option>
                            			<option value="zipcode">${placeholderWithTranslation.plz}</option>
