<div id="content_container">
    <form id="formlist" name="formlist" action="MailDraftList" method="POST">
        <input type="hidden" name="limit" value=""/>
        <input type="hidden" name="start" value=""/>
        <input type="hidden" name="selectNone" value="true"/>
        <input type="hidden" name="doRemove" value="true"/>

        <div class="textRight marginBottom10" id="breadcrumb">
            <strong>${placeholderWithTranslation.siesindhier}:</strong> <span><a href="${paths.staticWeb}do/" title="${placeholderWithTranslation.zurstartseite}">${placeholderWithTranslation.home}</a> > ${placeholderWithTranslation.administration} > ${placeholderWithTranslation.emailvorlage}</span>
        </div>

        <h1>${placeholderWithTranslation.emailvorlage}</h1>

        <span id="actionPanel" class="inlineLabel">
	       	<strong>Markierte Vorlage(n)</strong>
	       	<input type="submit" name="remove" value="${placeholderWithTranslation.loschen}" title="${placeholderWithTranslation.markiertevorlagenloschen}" onclick="" />
        </span>
        <span id="" class="buttonPanel-top textRight floatRight">
			<input type="button" name="" value="Neue Vorlage anlegen" title="${placeholderWithTranslation.neuevorlageanlegen}" class="mainButton" onclick="window.location.href='MailDraftDetail';" />
        </span>
        #foreach($bean in $list)
        <input type="hidden" name="list" value="$bean.id"/>
        #end

    	<table class="fixed">
    		##Set column size
			<col width="$column0%" />
			<col width="$column1%" />
			<col width="$column2%" />

        	<tr>
        		<th class="smallCell textCenter">
        			<input type="checkbox" name="toggleAllSelect" id="toggleAllSelect" title="${placeholderWithTranslation.alledemarkieren}" #if($listselection.size() == $list.size()) checked#end/>
        		</th>
        		<th class="smallCell textCenter">${placeholderWithTranslation.id}</th>
        		<th>${placeholderWithTranslation.namedervorlage}</th>
        	</tr>
        	#foreach($bean in $list)
        	<tr>
        		<td><input type="checkbox" name="${bean.id}-select" value="true"/></td>
        		<td onclick="window.location.href='MailDraftDetail?id=$!{bean.id}';"><input type="hidden" name="${bean.id}-id" value="$bean.id"/>$!{bean.id}</td>
        		<td onclick="window.location.href='MailDraftDetail?id=$!{bean.id}';"/>$!message.text($bean.name)</td>
        	</tr>
        	#end

        	#set($itemName = "${placeholderWithTranslation.GENERIC_MAIL_DRAFT_PLURAL}")
        	#parse("inc/list-navi-new.vm")
        	#parse("inc/list-direct-new.vm")
            #if ($listparam.count == 0)
            	<tr><td colspan="3">${placeholderWithTranslation.keinedatengefunden}</td></tr>
            #end
        </table>

    </form>
</div>

#parse("inc/footer.vm")
