<div vera-content="$addressType address$extEncoding">
	<div class="table width100">

		<div class="tableRow">

			<div class="tableCell width50">
				<label for="person-function$!message.plain($ext)">${placeholderWithTranslation.GENERIC_FUNCTION_SINGULAR}</label>
				<textarea rows="2" col="20" id="person-function$!message.plain($ext)" name="person-function$!message.plain($ext)" maxlength="250" onchange="setModified();" #if($createNewPerson || !$grants.mayWrite()) vera-disabled#end>$!message.textarea($facade.Function)</textarea>
				#if(!$createNewPerson && $grants.mayWrite())
					<div class="addButton">
						<input type="button" value="${placeholderWithTranslation.ausstammdatenhinzufugen}" title="${placeholderWithTranslation.INSERT_FUNCTION_FROM_MAIN_DATA}" onclick="selectFunction('${paths.staticWeb}do/', 'person-function$ext');"/>
					</div>
				#end
			</div>

			<div class="tableCell width50">
				<label for="person-company$!message.plain($ext)">${placeholderWithTranslation.GENERIC_COMPANY_SINGULAR}/${placeholderWithTranslation.GENERIC_INSTITUTION_SINGULAR}</label>
				<input type="text" id="person-company$!message.plain($ext)" name="person-company$!message.plain($ext)" value="$!message.text($facade.Company)" maxlength="250" onchange="setModified();" #if($createNewPerson || !$grants.mayWrite()) vera-disabled#end/>
				#if(!$createNewPerson && $grants.mayWrite())
					<div class="addButton">
						<input type="button" value="${placeholderWithTranslation.ausstammdatenhinzufugen}" title="${placeholderWithTranslation.INSERT_COMPANY_FROM_MAIN_DATA}" onclick="selectCompany('${paths.staticWeb}do/', 'person-company$!message.plain($ext)');"/>
					</div>
				#end
			</div>

		</div>

		<div class="tableRow">

			<div class="tableCell width50">
				<label for="person-street$!message.plain($ext)">${placeholderWithTranslation.strase}</label>
				<input type="text" id="person-street$!message.plain($ext)" name="person-street$!message.plain($ext)" value="$!message.text($facade.Street)" maxlength="100" onchange="setModified();" #if($createNewPerson || !$grants.mayWrite()) vera-disabled#end/>
			</div>

			<div class="tableCell width50 inlineLabel">
				<label for="person-zipcode$!message.plain($ext)">${placeholderWithTranslation.GENERIC_POST_NUMBER}</label> / <label for="person-city$!message.plain($ext)">${placeholderWithTranslation.GENERIC_CITY}</label><br />
				<input type="text" id="person-zipcode$!message.plain($ext)" name="person-zipcode$!message.plain($ext)" value="$!message.text($facade.ZipCode)" maxlength="50" onchange="setModified();" class="width15 inlineInput" #if($createNewPerson || !$grants.mayWrite()) vera-disabled#end/>
				<input type="text" id="person-city$!message.plain($ext)" name="person-city$!message.plain($ext)" value="$!message.text($facade.City)" maxlength="300" onchange="setModified();" class="width85 inlineInput" #if($createNewPerson || !$grants.mayWrite()) vera-disabled#end/>
			</div>

		</div>

		<div class="tableRow">

			<div class="tableCell width50">
				<label for="person-state$!message.plain($ext)">${placeholderWithTranslation.GENERIC_FEDERAL_STATE}</label>
				<input type="text" id="person-state$!message.plain($ext)" name="person-state$!message.plain($ext)" value="$!message.text($facade.State)" maxlength="100" onchange="setModified();" #if($createNewPerson || !$grants.mayWrite()) vera-disabled#end/>
			</div>

			<div class="tableCell width50">
				<label for="person-country$!message.plain($ext)">${placeholderWithTranslation.GENERIC_COUNTRY}</label>
				<input type="text" id="person-country$!message.plain($ext)" name="person-country$!message.plain($ext)" value="$!message.text($facade.Country)" maxlength="100" onchange="setModified();" #if($createNewPerson || !$grants.mayWrite()) vera-disabled#end/>
			</div>

		</div>

		<div class="tableRow">

			<div class="tableCell width50 inlineLabel">
				<label for="person-poboxzipcode$!message.plain($ext)">${placeholderWithTranslation.GENERIC_POST_NUMBER}</label> / <label for="person-pobox$!message.plain($ext)">${placeholderWithTranslation.GENERIC_POST_OFFICE_BOX}</label><br />
				<input type="text" id="person-poboxzipcode$!message.plain($ext)" name="person-poboxzipcode$!message.plain($ext)" value="$!message.text($facade.POBoxZipCode)" maxlength="50" onchange="setModified();" class="width15 inlineInput" #if($createNewPerson || !$grants.mayWrite()) vera-disabled#end/>
				<input type="text" id="person-pobox$!message.plain($ext)" name="person-pobox$!message.plain($ext)" value="$!message.text($facade.POBox)" maxlength="50" onchange="setModified();" class="width85 inlineInput" #if($createNewPerson || !$grants.mayWrite()) vera-disabled#end/>
			</div>

			<div class="tableCell width50">
			</div>

		</div>

		<div class="tableRow">

			<div class="tableCell width50">
				<label for="person-suffix1$!message.plain($ext)">$!message.plain($config.suffix1)</label>
				<input type="text" id="person-suffix1$!message.plain($ext)" name="person-suffix1$!message.plain($ext)" value="$!message.text($facade.Suffix1)" maxlength="100" onchange="setModified();" #if($createNewPerson || !$grants.mayWrite()) vera-disabled#end/>
			</div>

			<div class="tableCell width50">
				<label for="person-suffix2$!message.plain($ext)">$!message.plain($config.suffix2)</label>
				<input type="text" id="person-suffix2$!message.plain($ext)" name="person-suffix2$!message.plain($ext)" value="$!message.text($facade.Suffix2)" maxlength="100" onchange="setModified();" #if($createNewPerson || !$grants.mayWrite()) vera-disabled#end/>
			</div>

		</div>

		<div class="tableRow">

			<div class="tableCell width50">
				<label for="person-fon$!message.plain($ext)">${placeholderWithTranslation.GENERIC_TELEFON}</label>
				<input type="text" id="person-fon$!message.plain($ext)" name="person-fon$!message.plain($ext)" value="$!message.text($facade.Phone)" maxlength="100" onchange="setModified();" #if($createNewPerson || !$grants.mayWrite()) vera-disabled#end/>
			</div>

			<div class="tableCell width50">
				<label for="person-fax$!message.plain($ext)">${placeholderWithTranslation.GENERIC_FAX}</label>
				<input type="text" id="person-fax$!message.plain($ext)" name="person-fax$!message.plain($ext)" value="$!message.text($facade.Fax)" maxlength="100" onchange="setModified();" #if($createNewPerson || !$grants.mayWrite()) vera-disabled#end/>
			</div>

		</div>

		 <div class="tableRow">

			<div class="tableCell width50">
				<label for="person-mobil$!message.plain($ext)">${placeholderWithTranslation.GENERIC_MOBILE}</label>
				<input type="text" id="person-mobil$!message.plain($ext)" name="person-mobil$!message.plain($ext)" value="$!message.text($facade.Mobile)" maxlength="100" onchange="setModified();" #if($createNewPerson || !$grants.mayWrite()) vera-disabled#end/>
			</div>

			<div class="tableCell width50">
				<label id="emailLabel" for="person-mail$!message.plain($ext)">${placeholderWithTranslation.email}*</label>
				<input type="text" id="person-mail$!message.plain($ext)" name="person-mail$!message.plain($ext)" value="$!message.text($facade.EMail)" maxlength="250" onchange="setModified();" #if(!$grants.mayWrite() || ($createNewPerson && $ext != "_a_e1")) vera-disabled#end/>

				#if($facade.EMail && $facade.EMail.length()>0)
				<div class="addButton">
					<a class="noBorder" href="mailto:$!message.text($facade.EMail)"><img src="${paths.staticWeb}images/email.gif" title="E-Mail an diese Adresse senden"></a>
				</div>
				#end

			</div>

		</div>

		<div class="tableRow">

			<div class="tableCell width50">
				<label for="person-url$!message.plain($ext)">${placeholderWithTranslation.LETTERS_WWW}</label>
				<input type="text" id="person-url$!message.plain($ext)" name="person-url$!message.plain($ext)" value="$!message.text($facade.Url)" maxlength="250" onchange="setModified();" #if($createNewPerson || !$grants.mayWrite()) vera-disabled#end/>
			</div>

			<div class="tableCell width50"></div>

		</div>

	</div>
</div>
