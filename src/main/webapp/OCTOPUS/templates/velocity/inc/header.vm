<!DOCTYPE HTML>
<html>
	<head>
		<title>VerA.web - $!title</title>
##		Browser-Cache deaktivieren
		<meta http-equiv="expires" content="0">
		<meta http-equiv="cache-control" content="no-cache">
		<meta http-equiv="pragma" content="no-cache">
##		Utils
		<script type="text/javascript" src="${paths.staticWeb}scripts/jquery.min.js"></script>
		<script type="text/javascript" src="${paths.staticWeb}scripts/utils.js"></script>
		<script type="text/javascript" src="${paths.staticWeb}scripts/clipboard.js"></script>
##		Tabs und Popups
		<script type="text/javascript" src="${paths.staticWeb}scripts/dhtml-tabs.js"></script>
		<script type="text/javascript" src="${paths.staticWeb}scripts/dhtml-popup.js"></script>
		<script type="text/javascript" src="${paths.staticWeb}scripts/dhtml-dialogs.js"></script>
##		Calendar (http://www.dynarch.com/projects/calendar/)
		<script type="text/javascript" src="${paths.staticWeb}jscalendar/calendar.js"></script>
		<script type="text/javascript" src="${paths.staticWeb}jscalendar/calendar-setup.js"></script>
		<script type="text/javascript" src="${paths.staticWeb}jscalendar/lang/calendar-de.js"></script>
		<script>
			document.createElement("header");
			document.createElement("nav");
			document.createElement("section");
			document.createElement("footer");
		</script>
		<link rel="stylesheet" type="text/css" href="${paths.staticWeb}jscalendar/calendar-win2k-cold-1.css" media="all" />
##		WCH - Windowed Controls Hider (http://www.aplus.co.yu/wch/intro/)
##		<!--[if IE]>
		<script type="text/javascript" src="${paths.staticWeb}scripts/WCH.js"></script>
		<script type="text/javascript" src="${paths.staticWeb}scripts/vera-tabs.js"></script>
##		<![endif]-->
##		Style
		<link rel="stylesheet" type="text/css" href="${paths.staticWeb}styles/style.css" media="all" />
		<!--link rel="stylesheet" type="text/css" href="${paths.staticWeb}styles/default.css" media="all"-->
		<!--link rel="stylesheet" type="text/css" href="${paths.staticWeb}styles/screen.css" media="screen,projection" title="Ausw&auml;rtiges Amt Intranet-Stil"-->
	</head>
	<body>
		<div id="container" #if($event) class="event" #end>
			<header id="header">
				<a href="${paths.staticWeb}do/" title="Zur Startseite" class="noBorder"><img src="${paths.staticWeb}images/veraweb_logo.png" alt="VerA.web Logo"></a>
				<div id="topNav">
                	<ul>
                        <form id="languageSelectForm" class="inline" method="POST">
                            <li>
                                <strong>${placeholderWithTranslation.GENERIC_LANGUAGE}:</strong>
                                <select id="languageSelector" name="languageSelector" onchange="changeLanguage();">
                                <p>${language}</p>
									#foreach($option in $translatedNames)
									    <p>${language} ${option}</p>
										#if(${option} == ${language})
											<option selected>${option}</option>
										#else
											<option>${option}</option>
										#end
									#end
                                </select>
                            </li>
                        </form>

					    #if($grants && $grants.isAuthenticated())
							#if($config.helplink)
    							<li><a href="${paths.staticWeb}$config.helplink" #if($config.helptarget) target="$config.helptarget" #end>${placeholderWithTranslation.hilfe}</a></li>
							#else
	    						<li><a href="${paths.staticWeb}/doc/Benutzerhandbuch.pdf" target="_blank">${placeholderWithTranslation.hilfe}</a></li>
							#end
							<li>
							    <a id="menu.logout" href="${paths.staticWeb}do/logout" class="noBorder">
							        <span class="borderBottom">${placeholderWithTranslation.abmelden}</span>
							        <img src="${paths.staticWeb}images/logout.png" alt="Logout icon" title="Logout" style="vertical-align:middle;" />
							    </a>
							</li>
						#end
					</ul>
				</div>
                #if($grants && $grants.isAuthenticated())
                    <div id="user">
                        <strong>${placeholderWithTranslation.benutzer}:</strong> $octopusConfig.personalConfig.userName#if($octopusConfig.personalConfig.proxy) / <strong>${placeholderWithTranslation.HEADER_REPRESENTATION_FOR}:</strong> $octopusConfig.personalConfig.role #end
                    </div>
                #end
			</header>

			#parse("inc/menu.vm")
			#if($elementNameSingular && $elementNameSingular != "" && $elementNamePlural && $elementNamePlural != "" && $elementNameSex && $elementNameSex != "")
				#if($elementNameSex && $elementNameSex == "Female")
					#set($prefNo = "${placeholderWithTranslation.HEADER_ELEMENT_FEMALE_NO}")
					#set($prefOne = "${placeholderWithTranslation.HEADER_ELEMENT_FEMALE_ONE}")
					#set($prefNew = "${placeholderWithTranslation.HEADER_ELEMENT_FEMALE_NEW}")
				#else
					#set($prefNo = "${placeholderWithTranslation.HEADER_ELEMENT_MALE_NO}")
					#set($prefOne = "${placeholderWithTranslation.HEADER_ELEMENT_MALE_ONE}")
					#set($prefNew = "${placeholderWithTranslation.HEADER_ELEMENT_MALE_NEW}")
				#end
				#set($noElement = "$prefNo $elementNameSingular")
				#set($noNewElement = "$prefNo $prefNew $elementNameSingular")
				#set($oneElement = "$prefOne $elementNameSingular")
				#set($oneNewElement = "$prefOne $prefNew $elementNameSingular")
				#set($severalElements = "$elementNamePlural")
				#set($severalNewElements = "${placeholderWithTranslation.GENERIC_NEW_PLURAL} $elementNamePlural")
			#else
				#set($noElement = "${placeholderWithTranslation.HEADER_ELEMENT_NO_RECORD_SINGULAR}")
				#set($noNewElement = "${placeholderWithTranslation.HEADER_ELEMENT_NO_NEW_RECORD_SINGULAR}")
				#set($oneElement = "${placeholderWithTranslation.HEADER_ELEMENT_ONE_RECORD_SINGULAR}")
				#set($oneNewElement = "${placeholderWithTranslation.HEADER_ELEMENT_ONE_NEW_RECORD_SINGULAR}")
				#set($severalElements = "${placeholderWithTranslation.HEADER_ELEMENT_PLURAL}")
				#set($severalNewElements = "${placeholderWithTranslation.HEADER_ELEMENT_NEW_PLURAL}")
			#end

			#if($countInsert && $countInsert > 0)
				<vera-success>
					#if($countInsert == 0)
						${placeholderWithTranslation.HEADER_COUNT_INSERT_ZERO_PART_ONE} $noNewElement ${placeholderWithTranslation.HEADER_COUNT_INSERT_ZERO_PART_TWO}
					#elseif($countInsert == 1)
                        ${placeholderWithTranslation.HEADER_COUNT_INSERT_ONE_PART_ONE} $oneNewElement ${placeholderWithTranslation.HEADER_COUNT_INSERT_ONE_PART_TWO}
					#else
                        ${placeholderWithTranslation.HEADER_COUNT_INSERT_ELSE_PART_ONE} $countInsert $severalNewElements ${placeholderWithTranslation.HEADER_COUNT_INSERT_ELSE_PART_TWO}
					#end
				</vera-success>
			#end
			#if($countUpdate && $countUpdate > 0)
				<vera-success>
					#if($countUpdate == 0)
                        ${placeholderWithTranslation.HEADER_COUNT_UPDATE_ZERO_PART_ONE} $noElement ${placeholderWithTranslation.HEADER_COUNT_UPDATE_ZERO_PART_TWO}
					#elseif($countUpdate == 1)
                        ${placeholderWithTranslation.HEADER_COUNT_UPDATE_ONE_PART_ONE} $oneElement ${placeholderWithTranslation.HEADER_COUNT_UPDATE_ONE_PART_TWO}
					#else
                        ${placeholderWithTranslation.HEADER_COUNT_UPDATE_ELSE_PART_ONE} $countUpdate $severalElements ${placeholderWithTranslation.HEADER_COUNT_UPDATE_ELSE_PART_TWO}
					#end
				</vera-success>
			#end
			#if($countRemove && $countRemove >= 0)
                ##Extra If-Verzweigung um überflüssige Success Meldung von Löschen von Personen(Aus Detailansicht) auszublenden
				#if($noElement && $noElement == "$prefNo ${placeholderWithTranslation.GENERIC_PERSON_SINGULAR}")

				#else
                    <vera-success>
                        #if($countRemove == 0)
                            ${placeholderWithTranslation.HEADER_COUNT_REMOVE_ZERO_PART_ONE} $noElement ${placeholderWithTranslation.HEADER_COUNT_REMOVE_ZERO_PART_TWO}
                        #elseif($countRemove == 1)
                            ${placeholderWithTranslation.HEADER_COUNT_REMOVE_ONE_PART_ONE} $oneElement ${placeholderWithTranslation.HEADER_COUNT_REMOVE_ONE_PART_TWO}
                        #else
                            ${placeholderWithTranslation.HEADER_COUNT_REMOVE_ELSE_PART_ONE} $countRemove $severalElements ${placeholderWithTranslation.HEADER_COUNT_REMOVE_ELSE_PART_TWO}
                        #end
                    </vera-success>
				#end

			#end

            <script type="text/javascript">
                function changeLanguage() {
                    document.getElementById("languageSelectForm").submit();
                }
            </script>