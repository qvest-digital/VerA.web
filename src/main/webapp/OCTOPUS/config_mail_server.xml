<?xml version="1.0" encoding="utf-8"?>
<!--!DOCTYPE tcModuleConfig SYSTEM "../tcModuleConfig.dtd"-->

<!--
	Octopus config.xml

	E-Mail-Versendung
-->
<tcModuleConfig>
	<!-- Die in diesem Element enthaltenen param-Elemente erlauben, gewisse Aspekte von VerA.web zu steuern. -->
	<params>
		<param name="mailServer" type="map">
			<!-- die Wartezeit zwischen dem Versendenden verschiedener E-Mails in Sekunden. -->
			<param name="waitBetweenJobs" value="3"/>
			<!-- der SMTP-Server. -->
			<param name="host" value="localhost"/>
			<!--
				Der Absender, wenn zum versendenden Benutzer keine E-Mail-Adresse im LDAP gefunden wird.
				Hier kann "$role" als Platzhalter f체r die Rolle des versendenden Benutzers genutzt werden.
			-->
			<param name="from" value="$role@example.com"/>
		</param>
		<!-- maximale L채nge, die eine "mailto:..."-URL annehmen darf; "-1"  steht f체r keine Beschr채nkung. -->
		<param name="mailToUrlMaxSize" value="1024"/>
	</params>
</tcModuleConfig>
