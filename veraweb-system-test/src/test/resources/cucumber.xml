<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!--
		DO NOT EDIT THIS FILE. IF YOU WANT TO USE SPRING, USE THE >applicationContext.xml< FILE!
	-->

	<context:component-scan base-package="de.tarent.aa.veraweb.cucumber"/>
    <context:annotation-config/>

	<!-- Configure DataManager -->
	<bean id="datamanager" class="de.tarent.cucumber.datamanager.DataManager" factory-method="getInstance" />

	<!-- Configure Cucumber Start-Hooks -->
	<bean class="de.tarent.aa.veraweb.cucumber.env.hook.DatabaseInitializer" />

	<!-- Initialize important hooks. -->
	<bean class="de.tarent.aa.veraweb.cucumber.env.StartAndShutdownHook" scope="singleton"/>

    <import resource="classpath*:/applicationContext.xml"/>
</beans>
