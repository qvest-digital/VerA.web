#set($activeMenu = "Verwaltung")
#set($title = "Benutzer Einstellungen")
#parse("inc/header.vm")	

<div id="content_container">
    <form action="UserConfig" method="POST">
    
        <div id="breadcrumb" class="textRight marginBottom10">
            <strong>Sie sind hier:</strong> <span><a href="${paths.staticWeb}do/" title="Zur Startseite">Home</a> > Verwaltung > Einstellungen</span>
        </div>
        
        <h1>Einstellungen</h1>
        
		#if($saveSuccess)
    		<vera-success>Einstellungen wurden erfolgreich gespeichert.</vera-success>
    	#end
        
        #if(!$userConfig.personTab || $userConfig.personTab == "1")
        	#set($personTab1 = true)
        #else
        	#set($personTab2 = true)
        #end
        
        #if(!$userConfig.personMemberTab || $userConfig.personMemberTab == "1")
        	#set($personMemberTab1 = true)
        #else
        	#set($personMemberTab2 = true)
        #end
        	
        #if(!$userConfig.personAddresstypeTab || $userConfig.personAddresstypeTab == "1")
        	#set($personAddresstypeTab1 = true)
        #elseif($userConfig.personAddresstypeTab == "2")
        	#set($personAddresstypeTab2 = true)
        #else
        	#set($personAddresstypeTab3 = true)
        #end
        
        #if(!$userConfig.personLocaleTab || $userConfig.personLocaleTab == "1")
        	#set($personLocaleTab1 = true)
        #elseif($userConfig.personLocaleTab == "2")
        	#set($personLocaleTab2 = true)
        #else
        	#set($personLocaleTab3 = true)
        #end
        <div id="main_content" class="contentBoxColored grayBorder">
    		
        		<div style="width: 57%; float: left; max-width: 510px;">
        			<h3>Personendetailansicht</h3>
        					<fieldset class="marginTop20">
        						<legend>Standard Auswahl von Tabulatoren</legend>
        						<div class="table width100 inlineLabel">
        							<div class="tableRow">
        								<div class="tableCell bold paddingBottom10 width30">Haupttabs</div>
        								<div class="tableCell"><input type="radio" name="personTab" id="personTab1" value="1" #if($personTab1) checked #end> <label for="personTab1">&nbsp;Personendaten</label></div>
        								<div class="tableCell"><input type="radio" name="personTab" id="personTab2" value="2" #if($personTab2) checked #end> <label for="personTab2">&nbsp;Anschriften</label></div>
        								<div class="tableCell"></div>					
        							</div>
        							<div class="tableRow">
        								<div class="tableCell bold paddingBottom10">Subtabs von &bdquo;Personendaten&rdquo;</div>
        								<div class="tableCell verticalBottom"><input type="radio" name="personMemberTab" id="personMemberTab1" value="1" #if($personMemberTab1) checked #end> <label for="personMemberTab1">&nbsp;Hauptperson</label></div>
        								<div class="tableCell verticalBottom"><input type="radio" name="personMemberTab" id="personMemberTab2" value="2" #if($personMemberTab2) checked #end> <label for="personMemberTab2">&nbsp;Partner</label></div>
        								<div class="tableCell"></div>
        							</div>
        							<div class="tableRow">
        								<div class="tableCell bold paddingBottom10">Subtabs von &bdquo;Anschriften&rdquo;</div>
        								<div class="tableCell verticalBottom"><input type="radio" name="personAddresstypeTab" id="personAddresstypeTab1" value="1" #if($personAddresstypeTab1) checked #end> <label for="personAddresstypeTab1">&nbsp;Gesch&auml;ftlich</label></div>
        								<div class="tableCell verticalBottom"><input type="radio" name="personAddresstypeTab" id="personAddresstypeTab2" value="2" #if($personAddresstypeTab2) checked #end> <label for="personAddresstypeTab2">&nbsp;Privat</label></div>
        								<div class="tableCell verticalBottom"><input type="radio" name="personAddresstypeTab" id="personAddresstypeTab3" value="3" #if($personAddresstypeTab3) checked #end> <label for="personAddresstypeTab3">&nbsp;Weitere</label></div>						
        							</div>
        						</div>
        					</fieldset>	
        					<fieldset>
        					<legend>Standard Auswahl der Selectbox &bdquo;Zeichensatz&rdquo;</legend>	
        						<div class="table width100 inlineLabel">
        							<div class="tableRow">
        								<div class="tableCell"><input type="radio" name="personLocaleTab" id="personLocaleTab1" value="1" #if($personLocaleTab1) checked #end> <label for="personLocaleTab1">&nbsp;Latein</label></div>
        								<div class="tableCell"><input type="radio" name="personLocaleTab" id="personLocaleTab2" value="2" #if($personLocaleTab2) checked #end> <label for="personLocaleTab2">&nbsp;Zeichensatz 1</label></div>
        								<div class="tableCell"><input type="radio" name="personLocaleTab" id="personLocaleTab3" value="3" #if($personLocaleTab3) checked #end> <label for="personLocaleTab3">&nbsp;Zeichensatz 2</label></div>						
        							</div>
        						</div>
        						
        					</fieldset>
    			</div>
    		
        		<div style="width:41%" class="floatRight">
        			<h3>Gästeliste</h3>
        					<fieldset class="marginTop20">
        						<legend>Zusätzliche Felder</legend>
        						<div class="table inlineLabel">
        							<div class="tableRow">
        								<div class="tableCell"><input type="checkbox" name="guestListFunction" id="guestListFunction" value="true" #if($userConfig.guestListFunction) checked #end> <label for="guestListFunction">&nbsp;Funktion</label></div>
        								<div class="tableCell"><input type="checkbox" name="guestListCity" id="guestListCity" value="true" #if($userConfig.guestListCity) checked #end> <label for="guestListCity">&nbsp;PLZ / Ort</label></div>
        								<div class="tableCell"><input type="checkbox" name="guestListPhone" id="guestListPhone" value="true" #if($userConfig.guestListPhone) checked #end> <label for="guestListPhone">&nbsp;Telefon</label></div>
        							</div>
        						</div>
        						
        					</fieldset>	
        					<h3>Personenliste</h3>
        					<fieldset class="marginTop20">
        						<legend>Zusätzliche Felder</legend>
        						<div class="table inlineLabel">
        							<div class="tableRow">
        								<div class="tableCell"><input type="checkbox" name="personListState" id="personListState" value="true" #if($userConfig.personListState) checked #end> <label for="guestListFunction">&nbsp;Bundesland</label></div>
        							</div>
        						</div>
        					</fieldset>		
    			</div>
        
				<div class="clear"></div>
    
        </div>
    	<div class="textRight marginTop10" id="buttonPanel-bottom">
    			<input type="submit" class="mainButton" value="Speichern" title="Speichern" name="save" />
        </div>			
</form>
</div>

#parse("inc/footer.vm")