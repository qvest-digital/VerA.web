#set($activeMenu = "Administration")
#set($title = "Farben")
#parse("inc/header.vm")	

<div id="content_container">

	<div id="breadcrumb" class="textRight marginBottom10">
	    	<strong>Sie sind hier:</strong> <span><a href="${paths.staticWeb}do/" title="Zur Startseite">Home</a> > Administration > Farben</span>
	</div>
		
	<h1>Farben</h1>
	
	<form id="formlist" name="formlist" action="Color" method="POST">
	
		#if($errors.size() > 0)
		<vera-warn>
			#foreach($error in $errors)
				$error<br>
			#end
		</vera-warn>
		#end
		
		<input type="hidden" name="color1-id" value="$!color1.id">
		<input type="hidden" name="color2-id" value="$!color2.id">
		<input type="hidden" name="color3-id" value="$!color3.id">
		<input type="hidden" name="color4-id" value="$!color4.id">
		<input type="hidden" name="color1-addresstype" value="2">
		<input type="hidden" name="color2-addresstype" value="2">
		<input type="hidden" name="color3-addresstype" value="2">
		<input type="hidden" name="color4-addresstype" value="2">
		<input type="hidden" name="color1-locale" value="1">
		<input type="hidden" name="color2-locale" value="1">
		<input type="hidden" name="color3-locale" value="1">
		<input type="hidden" name="color4-locale" value="1">
		<input type="hidden" id="color1-modified" name="color1-modified" value="false">
		<input type="hidden" id="color2-modified" name="color2-modified" value="false">
		<input type="hidden" id="color3-modified" name="color3-modified" value="false">
		<input type="hidden" id="color4-modified" name="color4-modified" value="false">
		<input type="hidden" name="limit" value="" />
		
				
		<div id="main_content">
			<div class="textRight mandatoryText tabs">* = Pflichtfelder</div>		
			
			<table>
				<tr>
					<th>Bezeichnung*</th>
					<th class="width15 textCenter">Farbwert (R G B)</th>
				</tr>
			
				<tr>
                    <td colspan="2" class="bold">Inland: Ja - Geschlecht: Weiblich</td>
				</tr>
				## RGB teilen
				#if($color1)
				#set($rgb = $color1.rgb)
				#set($r = $rgb / 65536)
				#set($rgb = $rgb - ($r * 65536))
				#set($g = $rgb / 256)
				#set($rgb = $rgb - ($g * 256))
				#set($b = $rgb)
				<tr>
					<td><input type="text" name="color1-name" value="$!message.text($color1.name)" onchange="setModified('color1')"></td>
					<td><input type="text" name="color1-rgb" value="$!r $!g $!b" onchange="setModified('color1')"></td>
				</tr>
				#else
				<tr>
					<td><input type="text" name="color1-name" value="" onchange="setModified('color1')"></td>
					<td><input type="text" name="color1-rgb" value="" onchange="setModified('color1')"></td>
				</tr>
				#end
			
				<tr>
                    <td colspan="2" class="bold">Inland: Ja - Geschlecht: M&auml;nnlich</td>
				</tr>
				## RGB teilen
				#if($color2)
				#set($rgb = $color2.rgb)
				#set($r = $rgb / 65536)
				#set($rgb = $rgb - ($r * 65536))
				#set($g = $rgb / 256)
				#set($rgb = $rgb - ($g * 256))
				#set($b = $rgb)
				<tr>
					<td><input type="text" name="color2-name" value="$!message.text($color2.name)" onchange="setModified('color2')"></td>
					<td><input type="text" name="color2-rgb" value="$!r $!g $!b" onchange="setModified('color2')"></td>
				</tr>
				#else
				<tr>
					<td><input type="text" name="color2-name" value="" onchange="setModified('color2')"></td>
					<td><input type="text" name="color2-rgb" value="" onchange="setModified('color2')"></td>
				</tr>
				#end
			
				<tr>
                    <td colspan="2" class="bold">Inland: Nein - Geschlecht: Weiblich</td>
				</tr>
				## RGB teilen
				#if($color3)
				#set($rgb = $color3.rgb)
				#set($r = $rgb / 65536)
				#set($rgb = $rgb - ($r * 65536))
				#set($g = $rgb / 256)
				#set($rgb = $rgb - ($g * 256))
				#set($b = $rgb)
				<tr>
					<td><input type="text" name="color3-name" value="$!message.text($color3.name)" onchange="setModified('color3')"></td>
					<td><input type="text" name="color3-rgb" value="$!r $!g $!b" onchange="setModified('color3')"></td>
				</tr>
				#else
				<tr>
					<td><input type="text" name="color3-name" value="" onchange="setModified('color3')"></td>
					<td><input type="text" name="color3-rgb" value="" onchange="setModified('color3')"></td>
				</tr>
				#end
			
				<tr>
                    <td colspan="2" class="bold">Inland: Nein - Geschlecht: M&auml;nnlich</td>
				</tr>
				## RGB teilen
				#if($color4)
				#set($rgb = $color4.rgb)
				#set($r = $rgb / 65536)
				#set($rgb = $rgb - ($r * 65536))
				#set($g = $rgb / 256)
				#set($rgb = $rgb - ($g * 256))
				#set($b = $rgb)
				<tr>
					<td><input type="text" name="color4-name" value="$!message.text($color4.name)" onchange="setModified('color4')"></td>
					<td><input type="text" name="color4-rgb" value="$!r $!g $!b" onchange="setModified('color4')"></td>
				</tr>
				#else
				<tr>
					<td><input type="text" name="color4-name" value="" onchange="setModified('color4')"></td>
					<td><input type="text" name="color4-rgb" value="" onchange="setModified('color4')"></td>
				</tr>
				#end
				
				#parse("inc/list-direct-new.vm")
			</table>
			
				<div id="buttonPanel-bottom" class="textRight marginTop10">
					<input type="submit" name="save" value="Speichern" #if($grants.isAdmin()) class="mainButton" #else class="buttondisabled" vera-disabled #end>
				</div>
				
				<script type="text/javascript">
				#if(!$grants.isAdmin())
					disableForm(document.getElementById('formlist'));
				#end
				</script>
		</div>
	</form>
</div>

#parse("inc/footer.vm")