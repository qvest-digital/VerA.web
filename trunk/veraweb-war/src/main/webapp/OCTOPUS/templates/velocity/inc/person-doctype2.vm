<form id="PersonForm" name="PersonForm" action="${paths.staticWeb}do/SavePersonDoctype" method="post">
<input type="hidden" name="id" value="$!person.id">

<input type="hidden" name="persondoctype-id" value="$!persondoctype.id">
<input type="hidden" name="persondoctype-person" value="$!persondoctype.person">
<input type="hidden" name="persondoctype-doctype" value="$!persondoctype.doctype">

<div id="tabsContent" class="contentBoxColored">
	<h3>Dokumenttyp bearbeiten</h3>				
	<div class="table width100">
		<div class="tableRow notBold">
			<div class="tableCell width50">
				<strong>Dokument-ID:</strong>$!message.text($persondoctype.doctype)
			</div>
			<div class="tableCell width50">
				<strong>Dokument-Name:</strong>$!message.text($persondoctype.name)							
			</div>
		</div>
	</div>
	<div class="table width100">
		<div class="tableRow">
			<div class="tableCell width50">
				<label for="persondoctype-textfield">Freitextfeld:</label>
				<textarea id="persondoctype-textfield" name="persondoctype-textfield" #if($grants.mayWrite()) class="text" #else class="textdisabled" readonly #end>$!message.textarea($persondoctype.textfield)</textarea>	
			</div>
			<div class="tableCell width50">
				<label for="persondoctype-textfieldPartner">Partner Freitextfeld:</label>	
				<textarea id="persondoctype-textfieldPartner" name="persondoctype-textfieldPartner" #if($grants.mayWrite()) class="text" #else class="textdisabled" readonly #end>$!message.textarea($persondoctype.textfieldPartner)</textarea>													
			</div>
		</div>
		<div class="tableRow">
		<div class="tableCell width50">
			<label for="persondoctype-textfieldJoin">Verbinder:</label>
			<input type="text" id="persondoctype-textfieldJoin" name="persondoctype-textfieldJoin" value="$!message.text($persondoctype.textfieldJoin)" #if($grants.mayWrite()) class="text" #else class="textdisabled" readonly #end></textarea>				
		</div>
	<div class="tableCell width50">
		<label for="persondoctype-addresstype">Anschrift:</label>
		#if($grants.mayWrite())
		<select id="persondoctype-addresstype" name="persondoctype-addresstype" class="combobox">
			<option value="1" #if($persondoctype.addresstype && $persondoctype.addresstype == 1) selected#end>$!config.business</option>
			<option value="2" #if($persondoctype.addresstype && $persondoctype.addresstype == 2) selected#end>$!config.private</option>
			<option value="3" #if($persondoctype.addresstype && $persondoctype.addresstype == 3) selected#end>$!config.other</option>
		</select>
		#else
		#if($persondoctype.addresstype && $persondoctype.addresstype == 1)
		$!config.business
		#elseif($persondoctype.addresstype && $persondoctype.addresstype == 2)
		$!config.private
		#elseif($persondoctype.addresstype && $persondoctype.addresstype == 3)
		$!config.other
		#end
		#end											
	</div>
</div>	
						
<div class="tableRow">
	<div class="tableCell width50">
		<label for="">Zeichensatz:</label>	
		#if($grants.mayWrite())
		<select id="persondoctype-locale" name="persondoctype-locale" class="combobox">
			<option value="1" #if($persondoctype.locale && $persondoctype.locale == 1) selected#end>$!config.latin</option>
			<option value="2" #if($persondoctype.locale && $persondoctype.locale == 2) selected#end>$!config.extra1</option>
			<option value="3" #if($persondoctype.locale && $persondoctype.locale == 3) selected#end>$!config.extra2</option>
		</select>
		#else
		#if($persondoctype.locale && $persondoctype.locale == 1)
		$!config.latin
		#elseif($persondoctype.locale && $persondoctype.locale == 2)
		$!config.extra1
		#elseif($persondoctype.locale && $persondoctype.locale == 3)
		$!config.extra2
		#end
		#end					
	</div>
	<div class="tableCell width50">&nbsp;</div>
	</div>									
</div>
					
<span id="buttonPanel-bottom" class="textRight">
#if($action == "guest")
<input type="submit" name="save" value="Dokumenttyp speichern" #if($grants.mayWrite()) class="button mainButton" #else class="buttondisabled mainButton" disabled #end> &nbsp;
<input type="button" name="cancel" value="Abbrechen" class="button mainButton" onclick="window.location.href='${paths.staticWeb}do/ShowPersonDoctypeList?id=$!person.id';"> &nbsp;
#if($person)
<input type="button" name="add" value="&Uuml;bernehmen" title="Gast direkt in G&auml;steliste &uuml;bernehmen" onclick="addToGuestList();" #if($grants.mayWrite()) class="button mainButton" #else class="buttondisabled mainButton" disabled #end> &nbsp;
<input type="button" name="cancel" class="button mainButton" value="Abbrechen" title="Abbrechen" onclick="window.location.href='AddPersonToEventList';"> &nbsp;
#else
<input type="button" name="cancel" class="button mainButton" value="Abbrechen" title="Abbrechen" onclick="window.location.href='AddPersonToEventList';"> &nbsp;
#end
#elseif($action == "host")
<input type="submit" name="save" value="Dokumenttyp speichern" #if($grants.mayWrite()) class="mainButton" #else class="buttondisabled" disabled #end> &nbsp;
<input type="button" name="cancel" value="Abbrechen" class="button mainButton" onclick="window.location.href='${paths.staticWeb}do/ShowPersonDoctypeList?id=$!person.id';"> &nbsp;
<input type="button" name="cancel" class="mainButton" value="Abbrechen" onclick="window.location.href='${paths.staticWeb}do/SetHostToEventList';">
#elseif($action == "event")
<input type="submit" name="save" value="Dokumenttyp speichern" #if($grants.mayWrite()) class="button" #else class="buttondisabled mainButton" disabled #end> &nbsp;
<input type="button" name="cancel" value="Abbrechen" class="button mainButton" onclick="window.location.href='${paths.staticWeb}do/ShowPersonDoctypeList?id=$!person.id';"> &nbsp;
<input type="button" name="cancel" class="button mainButton" value="Abbrechen" onclick="window.location.href='${paths.staticWeb}do/ShowGuestDetail';">
#else
<input type="submit" name="save" value="Dokumenttyp speichern" #if($grants.mayWrite()) class="button mainButton" #else class="buttondisabled mainButton" disabled #end> &nbsp;
<input type="button" name="cancel" value="Abbrechen" class="button mainButton" onclick="window.location.href='${paths.staticWeb}do/ShowPersonDoctypeList?id=$!person.id';"> &nbsp;
#end
				
</span>				
</div>


</form>