	<body>
		<div id="container" #if($event) class="event" #end>
        	<header id="header">
        		<a href="${paths.staticWeb}do/" title="Zur Startseite" class="noBorder"><img src="${paths.staticWeb}images/veraweb_logo.png" alt="VerA.web Logo"></a>
					#if($grants && $grants.isAuthenticated())
            			<div id="topNav"> 			
            				<ul>
    							#if($config.helplink)
    								<li><a href="${paths.staticWeb}$config.helplink" #if($config.helptarget) target="$config.helptarget" #end>Hilfe</a></li>
    							#else
    								<li title="Die Hilfe wurde noch nicht hinterlegt">Hilfe</li>
    							#end
            					<li><a id="menu.logout" href="${paths.staticWeb}do/logout" class="noBorder"> <span class="borderBottom">Abmelden</span> <img src="${paths.staticWeb}images/logout.png" alt="Logout icon" title="Logout" style="vertical-align:middle;" /></a></li>
            				</ul>
            			</div>
            			<div id="user">
            				<strong>Benutzer</strong> $octopusConfig.personalConfig.userName#if($octopusConfig.personalConfig.proxy) / <strong>In Vertretung f&uuml;r</strong> $octopusConfig.personalConfig.role #end
            			</div>
					#end
        	</header>
            
			#parse("inc/menu.vm")					

            #if($octopusRequest.task != "ShowPersonCategorieList" || ($octopusRequest.task == "ShowPersonCategorieList" && $status && $status.code && $status.code == "saveperson"))
                #if($countInsert && $countInsert > 0)
                	<vera-success>
                		#if($countInsert == 0)
                			Es wurde kein neuer Datensatz angelegt.
                		#elseif($countInsert == 1)
                			Es wurde ein neuer Datensatz angelegt.
                		#else
                			Es wurden $countInsert neue Datens&auml;tze angelegt.
                		#end
                	</vera-success>
                #end
                #if($countUpdate && $countUpdate > 0)
                	<vera-success>
                		#if($countUpdate == 0)
                			Es wurde kein Datensatz ge&auml;ndert.
                		#elseif($countUpdate == 1)
                			Es wurde ein Datensatz ge&auml;ndert.
                		#else
                			Es wurden $countUpdate Datens&auml;tze ge&auml;ndert.
                		#end
                	</vera-success>
                #end
                #if($countRemove)
                	<vera-success>
                		#if($countRemove == 0)
                			Es wurde kein Datensatz gel&ouml;scht.
                		#elseif($countRemove == 1)
                			Es wurde ein Datensatz gel&ouml;scht.
                		#else
                			Es wurden $countRemove Datens&auml;tze gel&ouml;scht.
                		#end
                	</vera-success>
                #end
            #end
	

