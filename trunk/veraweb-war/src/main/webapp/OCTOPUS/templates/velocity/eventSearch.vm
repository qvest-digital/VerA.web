#set($activeMenu = "Veranstaltungen")

#if($action == "guest")
#set($title = "Veranstaltung suchen - Veranstaltung: $!message.plain($event.shortname)")
#elseif($action == "addperson")
#set($title = "Veranstaltung suchen - Person zuordnen")
