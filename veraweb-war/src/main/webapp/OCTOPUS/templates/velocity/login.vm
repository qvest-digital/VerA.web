#set($title = "Anmelden")
#parse("inc/header.vm")	

<form action="default" method="post" target="_top" onsubmit="if(document.getElementById('loginasproxy').checked) { this.action = 'LoginAsProxy'; this.task.value = 'LoginAsProxy'; }">

<h1 class="marginTop25">Login</h1>

<div class="table">
    <div class="tableRow">
        <div class="tableCell">
        	<label for="input.username">Benutzername</label>
        	<input type="text" id="input.username" name="username">
        </div>
    </div>
    <div class="tableRow">
        <div class="tableCell">
        	<label for="input.password">Passwort</label>
        	<input type="password" id="input.password" name="password">
        </div>
    </div>
    <div class="tableRow">
        <div class="tableCell inlineLabel">
        	<label for="loginasproxy">In Vertretung anmelden</label> <input type="checkbox" value="true" name="input.loginasproxy" class="noFloat" id="loginasproxy">
        </div>
    </div>
</div>

<div id="buttonPanel-bottom" class="marginTop5">
	<input type="submit" class="mainButton" value="Anmelden" name="submit" id="button.login">
	<input type="reset" class="mainButton" value="Felder leeren" name="cancel" id="button.clearFields">				
</div>

<vera-info>
	Bitte verwenden Sie Ihr Organisationskennzeichen oder <strong>Vorname.Nachname</strong> als Benutzernamen.
</vera-info>	


<input name="task" type="hidden" value="default">

#if($responseParams.message && $octopusRequest.task != "Main" && $octopusRequest.task != "ShowLogin")
<div id="text.error" style="margin: 10px 0px 10px 0px; padding: 10px 10px 10px 10px; background-color: #ffffff; border: 2px solid #ff0000;">
	Es ist ein Fehler bei der Anmeldung aufgetreten. Bitte &uuml;berpr&uuml;fen Sie Ihren Benutzernamen und Ihr Passwort.
</div>
#end

</form>

