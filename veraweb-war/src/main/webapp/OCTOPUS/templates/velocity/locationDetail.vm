#set($activeMenu = "Administration")
#if($location && $location.id)
#set($title = "Veranstaltungsort bearbeiten: $!message.plain($location.shortname)")
#parse("inc/header.vm")
#else
#set($title = "Neuen Veranstaltungsort eingeben")
#parse("inc/header.vm")
#end

<form id="formlist" name="formlist" action="" method="POST">
<input type="hidden" name="savelocation" value="true">
<input type="hidden" name="search" value="clear">

<input type="hidden" name="location-id" value="$!location.id">
<input type="hidden" name="location-orgunit" value="$!location.orgunit">


<table class="tab" border="0" cellspacing="0" cellpadding="0"><tr>
	<td class="tableft">&nbsp;</td>
	<td class="tabactiv"><span class="tabactiv">Veranstaltungsorte</span></td>
	<td class="tabright">&nbsp;</td>
</tr></table>





#if($location.errors.size() > 0)
<div style="width: 99%; background-color: #ffffff;">
<div style="margin: 10px 0px 10px 0px; padding: 10px 10px 10px 10px; background-color: #ffffff; border: 2px solid #ff0000;">
	$location.errors.get(0)<br>


</div>
</div>
#elseif($listquestions && $listquestions.size() > 0)
<div style="width: 99%; background-color: #ffffff;">
<div style="margin: 10px 0px 10px 0px; padding: 10px 10px 10px 10px; background-color: #ffffff; border: 2px solid #00ff00;">
	<strong>Bitte best&auml;tigen Sie das Speichern dieser Aufgabe</strong><br>
	<table class="form" style="margin: 5px 0px 0px 0px;">
	#foreach($quest in $listquestions.entrySet())
		<tr>
			<td class="value"><input type="hidden" name="$quest.key" value="true">$!message.plain($quest.value)</td>
		</tr>
		#set($save = true)
	#end
	</table><br>

	#if($save)
	<input type="submit" class="button" name="remove" value="Ja" title="Speichern"> &nbsp;
	#end
	<input type="button" class="cancel" name="cancel" value="Nein" onclick="window.location.href='CreateLocation?id=$!$locationtId';"> &nbsp;
</div>
</div>
#end


<table class="form">
	<tr>
		<td class="label"><label for="id">Veranstaltungsort-ID</label></td>
		<td class="value"><input type="text" name="id" value="$!message.text($location.id)" id="id" class="id" vera-disabled></td>
	</tr>
	
	
	<tr>
		<td class="label"><label for="location-title">Beschreibung/Titel*</label></td>
		<td class="value"><input type="text" name="location-name" value="$!message.text($location.name)" id="location-name"  maxlength="200" onchange="setModified();"></td>
	</tr>
	
	<tr>
		<td class="label"><label for="location-contactperson">Ansprechpartner</label></td>
		<td class="value"><input type="text" name="location-contactperson" value="$!message.text($location.contactperson)" id="location-contact-person"  maxlength="250" onchange="setModified();"></td>
	</tr>
	
	<tr>
		<td class="label"><label for="location-address">Stra&szlig;e</label></td>
		<td class="value"><input type="text" name="location-address" value="$!message.text($location.address)" id="location-address"  maxlength="250" onchange="setModified();"></td>
	</tr>
	
	<tr>
		<td class="label"><label for="location-zip">PLZ</label></td>
		<td class="value"><input type="text" name="location-zip" value="$!message.text($location.zip)" id="location-zip"  maxlength="50" onchange="setModified();"></td>
	</tr>
	
	<tr>
		<td class="label"><label for="location-location">Ort</label></td>
		<td class="value"><input type="text" name="location-location" value="$!message.text($location.location)" id="location-location"  maxlength="100" onchange="setModified();"></td>
	</tr>
	
	<tr>
		<td class="label"><label for="location-callnumber">Telefonnummer</label></td>
		<td class="value"><input type="text" name="location-callnumber" value="$!message.text($location.callnumber)" id="location-callnumber"  maxlength="50" onchange="setModified();"></td>
	</tr>
	
	<tr>
		<td class="label"><label for="location-faxnumber">Faxnummer</label></td>
		<td class="value"><input type="text" name="location-faxnumber" value="$!message.text($location.faxnumber)" id="location-faxnumber"  maxlength="50" onchange="setModified();"></td>
	</tr>
	
	<tr>
		<td class="label"><label for="location-email">E-Mail-Adresse</label></td>
		<td class="value"><input type="text" name="location-email" value="$!message.text($location.email)" id="location-email"  maxlength="100" onchange="setModified();"></td>
	</tr>
	
	<tr>
		<td class="label"><label for="location-comment">Bemerkungsfeld</label></td>
		<td class="value"><textarea rows="4" cols="20" name="location-comment" id="location-comment"  onchange="setModified();">$!message.textarea($location.comment)</textarea></td>
	</tr>
	
	<tr>
		<td class="label"><label for="location-url">URL</label></td>
		<td class="value"><input type="text" name="location-url" value="$!message.text($location.url)" id="location-url"  maxlength="250" onchange="setModified();"></td>
	</tr>
	
	<tr>
		<td class="label"><label for="location-gpsdata">GPS-Daten</label></td>
		<td class="value"><input type="text" name="location-gpsdata" value="$!message.text($location.gpsdata)" id="location-gpsdata"  maxlength="1000" onchange="setModified();"></td>
	</tr>
	
	<tr>
		<td class="label"><label for="location-roomnumber">Raumnummer</label></td>
		<td class="value"><input type="text" name="location-roomnumber" value="$!message.text($location.roomnumber)" id="location-roomnumber"  maxlength="250" onchange="setModified();"></td>
	</tr>
	
</table>

<div id="fixme" class="fixme1"><div class="fixme2"><div class="fixme3">

<input id="button.save" type="submit" name="save" value="Speichern" onclick="document.getElementById('formlist').action='SaveLocation';" #if($grants.mayWrite()) class="button" #else class="buttondisabled" vera-disabled #end> &nbsp;
<input id="button.back" type="button" name="cancel" class="button" value="Zur&uuml;ck" title="Zur Suche" onclick="window.location.href='${paths.staticWeb}do/Location?start=0';"> &nbsp; &nbsp;


</div></div></div>




</form>

#parse("inc/footer.vm")