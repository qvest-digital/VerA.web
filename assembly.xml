<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>files</id>
	<formats>
		<format>tgz</format>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>files</directory>
			<outputDirectory></outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/latex</directory>
			<outputDirectory></outputDirectory>
			<includes><include>*.lst</include></includes>
			<excludes><exclude>experiments.lst</exclude></excludes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>LICENCE.hdr</source>
			<outputDirectory></outputDirectory>
		</file>
		<file>
			<source>LICENSE.txt</source>
			<outputDirectory></outputDirectory>
			<destName>COPYING</destName>
		</file>
		<file>
			<source>src/main/webapp/doc/Benutzerhandbuch.pdf</source>
			<outputDirectory></outputDirectory>
		</file>
	</files>
</assembly>
