                </tr><tr>
                        <td class="width15 bold"><label for="import">${placeholderWithTranslation.GENERIC_IMPORT_PROCEDURES}:</label></td>
                        <td><input type="text" value="$!message.text($missingorgunit.import)" id="import" vera-disabled></td>
