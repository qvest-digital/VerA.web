<div id="content_container">
##    <script src="${paths.staticWeb}js/ext/jquery-tablesorter/jquery-latest.js"></script>
##    <script src="${paths.staticWeb}js/ext/jquery-tablesorter/jquery.tablesorter.js"></script>

    <form id="formlist" name="formlist" action="${paths.staticWeb}pdftemplate/delete" method="POST">
        <input type="hidden" name="limit" value=""/>
        <input type="hidden" name="start" value=""/>
        <input type="hidden" name="selectNone" value="true"/>
        <input type="hidden" name="doRemove" value="true"/>

        <div class="textRight marginBottom10" id="breadcrumb">
            <strong>${placeholderWithTranslation.GENERIC_YOU_ARE_HERE}:</strong> <span><a href="${paths.staticWeb}do/" title="${placeholderWithTranslation.zurstartseite}">${placeholderWithTranslation.GENERIC_HOME}</a> > ${placeholderWithTranslation.administration} > ${placeholderWithTranslation.pdfvorlagen}</span>
        </div>

        <h1>${placeholderWithTranslation.pdfvorlagen}</h1>

        <span id="actionPanel" class="inlineLabel">
                <strong>${placeholderWithTranslation.GENERIC_MARKED_TEMPLATES_PP}</strong>
                <input type="button" id="deletePdfTemplateButton" name="remove" value="${placeholderWithTranslation.GENERIC_DELETE}" title="${placeholderWithTranslation.markiertevorlagenloschen}" />
        </span>
        <span id="" class="buttonPanel-top textRight floatRight">
                        <input type="button" name="new" value="${placeholderWithTranslation.GENERIC_INSERT_NEW_TEMPLATES}" title="${placeholderWithTranslation.GENERIC_INSERT_NEW_TEMPLATES}" class="mainButton" onclick="window.location.href='PdfTemplateDetail';" />
        </span>

                <table id="pdftemplate-list-overview" class="fixed">
                        ##Set column size
                        <col width="$column0%" />
                        <col width="$column1%" />
                        <col width="$column2%" />

                        <tr>
                                <th class="smallCell textCenter">
                                        <input type="checkbox" name="toggleAllSelect" id="toggleAllSelect" title="${placeholderWithTranslation.alledemarkieren}" #if($listselection.size() == $list.size()) checked#end/>
                                </th>
                                <th>${placeholderWithTranslation.GENERIC_ID}
                                    #if($personSearchField == 'id')
                                        #if ($personSearchOrder == 'ASC')
                                            <span class="floatRight"><img border="0" alt="ASC" src="${paths.staticWeb}images/sort_up.gif"></img></span>
                                        #else
                                            <span class="floatRight"><img border="0" alt="DESC" src="${paths.staticWeb}images/sort_down.gif"></img></span>
                                        #end
                                    #else
                                        <span class="floatRight"><img border="0" alt="none" src="${paths.staticWeb}images/sort_none.gif"></img></span>
                                    #end
                                </th>
                                <th>${placeholderWithTranslation.GENERIC_TEMPLATE_NAME}</th>
                        </tr>

                        <tr class="colspan"></tr>
                </table>

    </form>
    <span class="amount" id="listnavitext"><span id="pdftemplates-count"></span> ${placeholderWithTranslation.GENERIC_PDF_TEMPLATE_S_P}</span>
</div>

