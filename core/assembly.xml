<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>files</id>
	<baseDirectory>${project.artifactId}-${project.version}-files</baseDirectory>
	<formats>
		<format>tgz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/files</directory>
			<outputDirectory/>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/l10n</directory>
			<outputDirectory>l10n</outputDirectory>
			<excludes>
				<exclude>generate_GM/**</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>src/main/webapp/OCTOPUS/config_database_pools.xml</source>
			<outputDirectory/>
		</file>
		<file>
			<source>../vwor/src/main/webapp/doc/Benutzerhandbuch.pdf</source>
			<outputDirectory/>
		</file>
		<file>
			<source>target/latex/installationsanleitung/installationsanleitung.lst</source>
			<outputDirectory/>
		</file>
	</files>
</assembly>
