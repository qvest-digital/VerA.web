<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>files</id>
	<formats>
		<format>tgz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>files</directory>
			<outputDirectory/>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/l10n</directory>
			<outputDirectory>l10n</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>src/main/webapp/OCTOPUS/config_database_pools.xml</source>
			<outputDirectory/>
		</file>
		<file>
			<source>src/main/webapp/doc/Benutzerhandbuch.pdf</source>
			<outputDirectory/>
		</file>
		<file>
			<source>target/latex/installationsanleitung-core/installationsanleitung-core.lst</source>
			<outputDirectory/>
		</file>
		<file>
			<source>target/latex/installationsanleitung-full/installationsanleitung-full.lst</source>
			<outputDirectory/>
		</file>
		<file>
			<source>target/latex/upgradeanleitung-core/upgradeanleitung-core.lst</source>
			<outputDirectory/>
		</file>
		<file>
			<source>target/latex/upgradeanleitung-full/upgradeanleitung-full.lst</source>
			<outputDirectory/>
		</file>
		<file>
			<source>${settings.localRepository}/org/postgresql/postgresql/${postgresql.version}/postgresql-${postgresql.version}.jar</source>
			<outputDirectory/>
			<destName>postgresql-jdbc4.jar</destName>
		</file>
	</files>
</assembly>
