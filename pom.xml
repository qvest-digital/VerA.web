<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<!-- 
		the version of maven's project object model. 
		Let this unchanged!
	-->
  	<modelVersion>4.0.0</modelVersion>
	
	<!-- 
		a unique name for this project. Please use a package
		like name for this, e.g. "de.tarent.doctor".
	-->
  	<groupId>de.tarent.octopus</groupId>
	
	<!-- 
		a unique name for the artifact generated by this project.
		This will be part of the artifact's name.
	-->
  	<artifactId>octopus-rpctunnel</artifactId>
	
	<!--
		The type of artifact this project produces, for example jar
		or war.
	-->
 	<packaging>jar</packaging>
 	
 	<!-- The full name of the project. -->
 	<name>octopus-rpctunnel</name>
	
	<!-- 
		The version of the project under development, e.g.
		1.1, 1.2, 2.0-SNAPSHOT 
	-->
  	<version>0.2</version>
  	
  	<!-- who the developers are for the project -->
	<developers>
		<developer>
			<id>jneuma</id>
			<name>Jens Neumaier</name>
			<email>j.neumaier@tarent.de</email>
			<organization>tarent GmbH</organization>
			<organizationUrl>http://www.tarent.de/</organizationUrl>
			<roles>
				<role>Core Developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
	</developers>
	
	<!-- Information required to build the project. -->
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<scriptSourceDirectory>src/main/scripts</scriptSourceDirectory>
		<testSourceDirectory>src/test/java</testSourceDirectory>
		<outputDirectory>target/classes</outputDirectory>
		<testOutputDirectory>target/test-classes</testOutputDirectory>		
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
			</testResource>
		</testResources>			
	</build>	
	
	<!-- the dependencies that are required for this project -->
	<dependencies>
		<dependency>
      		<groupId>junit</groupId>
      		<artifactId>junit</artifactId>
      		<version>3.8.1</version>
      		<scope>compile</scope>
    	</dependency>
	</dependencies>
	
	<!-- this section is required for deployment -->
	<distributionManagement>
		<repository>
			<id>tarent2-repository</id>
      		<name>tarent Maven2 Repository</name>
      		<url>scp://kassandra.tarent.de/home/maven/repository2</url>
    	</repository>
    	<snapshotRepository>
			<id>tarent2-repository</id>
      		<name>tarent Maven2 Repository</name>
      		<url>scp://kassandra.tarent.de/home/maven/repository2</url>
    	</snapshotRepository>
	</distributionManagement>
</project> 