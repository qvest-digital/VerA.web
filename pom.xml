		<dependency>
			<groupId>de.tarent.octopus</groupId>
			<artifactId>octopus-servlet</artifactId>
			<version>1.6.2</version>
			<exclusions>
				<exclusion>
					<groupId>commons-logging</groupId>
					<artifactId>commons-logging</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>de.tarent.octopus</groupId>
			<artifactId>octopus-ext-commons</artifactId>
			<version>1.90.4</version>
			<exclusions>
				<exclusion>
					<groupId>de.tarent.commons</groupId>
					<artifactId>tarent-commons</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>de.tarent.octopus</groupId>
			<artifactId>octopus-ext-beans</artifactId>
			<version>1.6.2verawebpl5</version>
		</dependency>
		<dependency>
			<groupId>org.osiam</groupId>
			<artifactId>connector4java</artifactId>
			<version>${osiam.connector4java.version}</version>
		</dependency>
		<dependency>
			<groupId>de.tarent.octopus</groupId>
			<artifactId>octopus-ext-cronjobs</artifactId>
