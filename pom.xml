<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.evolvis.veraweb.common</groupId>
    <artifactId>rest-api-common</artifactId>
    <version>1.5.1.1.2</version>

    <packaging>jar</packaging>

    <name>vera.web Online-Registration REST API common files</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <scm>
        <developerConnection>scm:git:ssh://maven@evolvis.org/scmrepos/git/veraweb/common.git</developerConnection>
        <url>https://evolvis.org/plugins/scmgit/cgi-bin/gitweb.cgi?p=veraweb/common.git</url>
    </scm>

    <repositories>
        <repository>
            <id>evolvis-release-repository</id>
            <name>evolvis.org release repository</name>
            <url>http://maven-repo.evolvis.org/releases</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>evolvis-snapshot-repository</id>
            <name>evolvis.org snapshot repository</name>
            <url>http://maven-repo.evolvis.org/snapshots</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <distributionManagement>
        <repository>
            <id>evolvis-release-repository</id>
            <name>evolvis.org release repository</name>
            <url>sftp://maven-repo.evolvis.org/var/www/maven_repo/releases</url>
        </repository>

        <snapshotRepository>
            <id>evolvis-snapshot-repository</id>
            <name>evolvis.org snapshot repository</name>
            <url>sftp://maven-repo.evolvis.org/var/www/maven_repo/snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <dependencies>

        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-core</artifactId>
            <version>4.3.1.Final</version>
        </dependency>

        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.12.4</version>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>3.1.0</version>
            <scope>provided</scope>
        </dependency>


    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                    <encoding>UTF-8</encoding>
                    <debug>true</debug>
                    <compilerArgument />
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.2.1</version>
            </plugin>
        </plugins>
    </build>
</project>
