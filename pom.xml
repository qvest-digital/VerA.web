<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.evolvis.veraweb</groupId>
	<artifactId>veraweb-parent</artifactId>
	<version>0.1</version>
	<packaging>pom</packaging>
	<name>VerA.web parent POM</name>
	<properties>
		<!-- general settings -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<sonar.sources>src/main</sonar.sources>
		<maven.build.timestamp.format>yyyyMMdd-HHmm</maven.build.timestamp.format>
		<build.timestamp>${maven.build.timestamp}</build.timestamp>
		<releaseVersion>${project.version}</releaseVersion>
		<java.version>1.7</java.version>
		<sonar.jacoco.reportPath>${basedir}/target/jacoco-unit.exec</sonar.jacoco.reportPath>
		<!-- dependency management -->
		<background-jobs.version>1.15</background-jobs.version>
		<cglib-nodep.version>3.2.1</cglib-nodep.version>
		<commons-csv.version>1.2</commons-csv.version>
		<commons-io.version>2.5</commons-io.version>
		<commons-lang3.version>3.4</commons-lang3.version>
		<dropwizard.version>0.7.1</dropwizard.version>
		<extract-tool.version>1.4</extract-tool.version>
		<frontend-maven-plugin.version>0.0.25</frontend-maven-plugin.version>
		<groovy-all.version>2.4.5</groovy-all.version>
		<h2.version>1.4.191</h2.version>
		<itext.version>4.2.0</itext.version>
		<jackson-dataformat-yaml.version>2.7.4</jackson-dataformat-yaml.version>
		<jackson-jaxrs-json-provider.version>2.4.0</jackson-jaxrs-json-provider.version>
		<jacoco.version>0.7.6.201602180812</jacoco.version>
		<javax.mail.version>1.4.7</javax.mail.version>
		<jersey.version>2.22.2</jersey.version>
		<json.version>0.0.20131108.vaadin1</json.version>
		<junit.version>4.12</junit.version>
		<log4j-core.version>2.5</log4j-core.version>
		<lombok.version>1.14.4</lombok.version>
		<mockito.version>1.10.19</mockito.version>
		<mycila.version>3.0</mycila.version>
		<osiam.connector4java.version>1.7</osiam.connector4java.version>
		<postgresql.version>9.3-1101-jdbc41</postgresql.version>
		<spock-core.version>1.0-groovy-2.4</spock-core.version>
		<spring-jdbc.version>4.2.6.RELEASE</spring-jdbc.version>
	</properties>
	<organization>
		<name>tarent solutions GmbH, Germany</name>
		<url>http://www.tarent.de/</url>
	</organization>
	<url>https://evolvis.org/projects/veraweb/</url>
	<mailingLists>
		<mailingList>
			<name>veraweb-commits@lists.evolvis.org</name>
		</mailingList>
		<mailingList>
			<name>veraweb-discuss@lists.evolvis.org</name>
		</mailingList>
	</mailingLists>
	<scm>
		<developerConnection>scm:git:ssh://maven@evolvis.org/scmrepos/git/veraweb/parent.git</developerConnection>
		<url>https://evolvis.org/plugins/scmgit/cgi-bin/gitweb.cgi?p=veraweb/parent.git</url>
		<tag>HEAD</tag>
	</scm>
	<!-- this section is required for deployment -->
	<distributionManagement>
		<repository>
			<id>tarent-nexus</id>
			<name>tarent-nexus releases</name>
			<url>https://repo-bn-01.lan.tarent.de/repository/maven-releases</url>
		</repository>
		<snapshotRepository>
			<id>tarent-nexus</id>
			<name>tarent-nexus snapshots</name>
			<url>https://repo-bn-01.lan.tarent.de/repository/maven-snapshots</url>
		</snapshotRepository>
	</distributionManagement>
	<build>
		<plugins>
			<plugin>
				<groupId>com.mycila</groupId>
				<artifactId>license-maven-plugin</artifactId>
				<version>${mycila.version}</version>
				<configuration>
					<basedir>${basedir}</basedir>
					<header>${basedir}/release/LICENCE.hdr</header>
					<quiet>false</quiet>
					<failIfMissing>true</failIfMissing>
					<aggregate>true</aggregate>
					<includes>
						<include>**/*.java</include>
					</includes>
					<headerDefinitions>
						<headerDefinition>${basedir}/release/myc-javapkg.xml</headerDefinition>
					</headerDefinitions>
					<mapping>
						<java>JavaPackage_style</java>
					</mapping>
					<useDefaultExcludes>true</useDefaultExcludes>
					<useDefaultMapping>true</useDefaultMapping>
					<encoding>UTF-8</encoding>
					<strictCheck>true</strictCheck>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.5.1</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
					<encoding>${project.build.sourceEncoding}</encoding>
					<compilerArgs>
						<arg>-Xlint:unchecked</arg>
					</compilerArgs>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>DISABLE_FORKED_LIFECYCLE_MSOURCES-13</phase>
					</execution>
					<execution>
						<id>attach-sources-no-fork</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.8</version>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.5.2</version>
				<configuration>
					<tagNameFormat>@{project.version}</tagNameFormat>
				</configuration>
			</plugin>
			<plugin>
				<!-- Avoid the M.A.D. Gadget vulnerability in certain apache commons-collections versions -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<version>1.4.1</version>
				<executions>
					<execution>
						<goals>
							<goal>enforce</goal>
						</goals>
						<configuration>
							<rules>
								<bannedDependencies>
									<excludes>
										<exclude>commons-collections:commons-collections:[3.0,3.2.1]</exclude>
										<exclude>commons-collections:commons-collections:4.0</exclude>
									</excludes>
								</bannedDependencies>
							</rules>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencyManagement>
		<dependencies>
		</dependencies>
	</dependencyManagement>
</project>
