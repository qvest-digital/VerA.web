<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.evolvis.veraweb</groupId>
    <artifactId>veraweb-export</artifactId>
    <version>1.8.33-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>veraweb-export</name>
    <url>http://maven.apache.org</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <groovy-all.version>2.4.5</groovy-all.version>
        <spock-core.version>1.0-groovy-2.4</spock-core.version>
        <extract-tool.version>1.1</extract-tool.version>
        <background-jobs.version>1.15</background-jobs.version>
        <cglib-nodep.version>3.2.1</cglib-nodep.version>
        <spring-jdbc.version>4.2.6.RELEASE</spring-jdbc.version>
        <jacoco.version>0.7.6.201602180812</jacoco.version>
        <commons-io.version>2.5</commons-io.version>
        <jackson-jaxrs-json-provider.version>2.4.0</jackson-jaxrs-json-provider.version>
    </properties>

    <repositories>
        <repository>
            <id>dfg-release-repository</id>
            <name>DFG release repository</name>
            <url>http://dfg-repo.tarent.de/releases</url>
        </repository>
    </repositories>

    <dependencies>

        <dependency>
            <groupId>de.tarent.extract</groupId>
            <artifactId>extract-tool</artifactId>
            <version>${extract-tool.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>com.oracle</groupId>
                    <artifactId>ojdbc6</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>de.tarent.dfg-commons</groupId>
            <artifactId>background-jobs</artifactId>
            <version>${background-jobs.version}</version>
        </dependency>

        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy-all</artifactId>
            <version>${groovy-all.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.spockframework</groupId>
            <artifactId>spock-core</artifactId>
            <version>${spock-core.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>cglib</groupId>
            <artifactId>cglib-nodep</artifactId>
            <version>${cglib-nodep.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-jdbc</artifactId>
            <version>${spring-jdbc.version}</version>
        </dependency>

        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>${commons-io.version}</version>
        </dependency>

        <dependency>
            <groupId>com.fasterxml.jackson.jaxrs</groupId>
            <artifactId>jackson-jaxrs-json-provider</artifactId>
            <version>${jackson-jaxrs-json-provider.version}</version>
        </dependency>

    </dependencies>

    <build>

        <plugins>

            <plugin>
                <groupId>org.codehaus.gmavenplus</groupId>
                <artifactId>gmavenplus-plugin</artifactId>
                <version>1.5</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>${jacoco.version}</version>
                <configuration>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>report</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

    </build>
</project>
